{% doc %}
  @prompt
    Create a two-column image section with two images displayed side by side. The section should be responsive and allow merchants to upload custom images for both left and right positions. Include options for image alignment and spacing between the images.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-images-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-two-column-images__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.image_spacing }}px;
    align-items: {{ block.settings.vertical_alignment }};
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-two-column-images__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-two-column-images__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .ai-two-column-images__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-two-column-images__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  @media screen and (max-width: 749px) {
    .ai-two-column-images__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_spacing }}px;
      padding: 0 16px;
    }
  }

  {% if block.settings.enable_hover_effect %}
    .ai-two-column-images__image-{{ ai_gen_id }} {
      transition: transform 0.3s ease;
    }

    .ai-two-column-images__image-wrapper-{{ ai_gen_id }}:hover .ai-two-column-images__image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }
  {% endif %}
{% endstyle %}

<div class="ai-two-column-images-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-column-images__container-{{ ai_gen_id }}">
    <div class="ai-two-column-images__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.left_image %}
        <img
          src="{{ block.settings.left_image | image_url: width: 800 }}"
          alt="{{ block.settings.left_image.alt | escape }}"
          class="ai-two-column-images__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.left_image.width }}"
          height="{{ block.settings.left_image.height }}"
        >
      {% else %}
        <div class="ai-two-column-images__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-two-column-images__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.right_image %}
        <img
          src="{{ block.settings.right_image | image_url: width: 800 }}"
          alt="{{ block.settings.right_image.alt | escape }}"
          class="ai-two-column-images__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.right_image.width }}"
          height="{{ block.settings.right_image.height }}"
        >
      {% else %}
        <div class="ai-two-column-images__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two Column Images",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right image"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "1/1",
          "label": "Square (1:1)"
        },
        {
          "value": "4/3",
          "label": "Landscape (4:3)"
        },
        {
          "value": "3/2",
          "label": "Classic (3:2)"
        },
        {
          "value": "16/9",
          "label": "Wide (16:9)"
        },
        {
          "value": "auto",
          "label": "Original"
        }
      ],
      "default": "4/3"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "image_spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Spacing between images",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_spacing",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Mobile spacing",
      "default": 15
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Corner radius",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "enable_hover_effect",
      "label": "Enable hover zoom effect",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Two Column Images"
    }
  ]
}
{% endschema %}