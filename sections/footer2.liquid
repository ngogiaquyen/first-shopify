{% comment %} Load Font Awesome for icons {% endcomment %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

{% comment %} Enhanced CSS for a modern, fitness-focused footer {% endcomment %}
<style>
  footer {
    background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
    color: #f1f5f9;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 3rem 0;
    position: relative;
    overflow: hidden;
  }
  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .footer-columns {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }
  .footer-logo img {
    max-width: 160px;
    height: auto;
    margin-bottom: 1.25rem;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }
  footer h5 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1.25rem;
    position: relative;
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  footer h5::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 2.5rem;
    height: 3px;
    background: linear-gradient(to right, #f43f5e, #ec4899);
    transition: width 0.4s ease, transform 0.4s ease;
  }
  footer h5:hover::after {
    width: 100%;
    transform: translateX(4px);
  }
  footer p {
    font-size: 0.9375rem;
    line-height: 1.7;
    margin-bottom: 1.25rem;
    opacity: 0.9;
  }
  .social-icons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .social-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 48px;
    min-height: 48px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }
  .social-icons a:hover {
    background: linear-gradient(45deg, #f43f5e, #ec4899);
    transform: scale(1.15) rotate(5deg);
    box-shadow: 0 4px 12px rgba(244, 63, 94, 0.4);
    color: #1e293b;
  }
  .social-icons i {
    font-size: 1.25rem;
  }
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  .footer-links a {
    font-size: 0.9375rem;
    color: #f1f5f9;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    padding: 0.375rem 0;
  }
  .footer-links i {
    font-size: 0.8125rem;
    color: #f43f5e;
    transition: transform 0.3s ease;
  }
  .footer-links a:hover {
    color: #f43f5e;
    transform: translateX(6px);
  }
  .footer-links a:hover i {
    transform: scale(1.2);
  }
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .newsletter-form input {
    padding: 0.875rem;
    border: 1px solid #475569;
    background: #1e293b;
    color: #f1f5f9;
    border-radius: 0.5rem;
    font-size: 0.9375rem;
    width: 100%;
    box-sizing: border-box;
    transition: all 0.3s ease;
  }
  .newsletter-form input:focus {
    border-color: #f43f5e;
    box-shadow: 0 0 0 4px rgba(244, 63, 94, 0.25);
    outline: none;
  }
  .newsletter-form button {
    padding: 0.875rem;
    background: linear-gradient(45deg, #f43f5e, #ec4899);
    color: #ffffff;
    font-weight: 600;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 48px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .newsletter-form button:hover {
    background: linear-gradient(45deg, #e11d48, #db2777);
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(244, 63, 94, 0.4);
  }
  .legal-section {
    border-top: 1px solid #475569;
    padding-top: 2rem;
    text-align: center;
    font-size: 0.875rem;
    opacity: 0.9;
  }
  .legal-section p {
    margin-bottom: 1rem;
  }
  .legal-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  .legal-links a {
    color: #f1f5f9;
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
    padding: 0.375rem 0;
  }
  .legal-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #f43f5e;
    transition: width 0.3s ease;
  }
  .legal-links a:hover {
    color: #f43f5e;
  }
  .legal-links a:hover::after {
    width: 100%;
  }
  footer a:focus, footer button:focus {
    outline: 2px solid #f43f5e;
    outline-offset: 3px;
    box-shadow: 0 0 0 4px rgba(244, 63, 94, 0.25);
  }

  /* Subtle background texture for fitness vibe */
  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255,255,255,0.05) 1px, transparent 1px);
    background-size: 20px 20px;
    opacity: 0.2;
  }

  /* Tablet (768px - 1024px) */
  @media (max-width: 1024px) {
    .footer-columns {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    .footer-logo img {
      max-width: 140px;
    }
    footer h5 {
      font-size: 1.125rem;
    }
    footer h5::after {
      width: 2rem;
    }
    footer p, .footer-links a {
      font-size: 0.875rem;
    }
    .social-icons a {
      width: 2.25rem;
      height: 2.25rem;
      min-width: 44px;
      min-height: 44px;
    }
    .social-icons i {
      font-size: 1.125rem;
    }
    .newsletter-form input, .newsletter-form button {
      font-size: 0.875rem;
      padding: 0.75rem;
    }
  }

  /* Mobile (below 768px) */
  @media (max-width: 768px) {
    .footer-columns {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
    .footer-logo img {
      max-width: 120px;
    }
    footer h5 {
      font-size: 1rem;
    }
    footer h5::after {
      width: 1.75rem;
    }
    footer p, .footer-links a {
      font-size: 0.8125rem;
    }
    .social-icons {
      gap: 0.75rem;
    }
    .social-icons a {
      width: 2rem;
      height: 2rem;
      min-width: 40px;
      min-height: 40px;
    }
    .social-icons i {
      font-size: 1rem;
    }
    .newsletter-form input, .newsletter-form button {
      font-size: 0.8125rem;
      padding: 0.625rem;
    }
    .legal-section {
      font-size: 0.8125rem;
    }
    .legal-links {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>