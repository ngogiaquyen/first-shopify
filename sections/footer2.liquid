{% comment %} Enhanced CSS for a modern, fitness-focused footer with updated blue-teal color scheme and toggle content styling {% endcomment %}
<style>
  footer {
    background: linear-gradient(180deg, #0f1c2e 0%, #1e3a4b 100%);
    color: #e2e8f0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif, 'Font Awesome 6 Free', 'Font Awesome 6 Brands';
    padding: 3rem 0;
    position: relative;
    overflow: hidden;
    z-index: 0;
  }
  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .footer-columns {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }
  .footer-logo img {
    max-width: 160px;
    height: auto;
    margin-bottom: 1.25rem;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }
  footer h5 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  footer p {
    font-size: 0.9375rem;
    line-height: 1.7;
    margin-bottom: 1.25rem;
    opacity: 0.9;
  }
  .social-icons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .social-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 48px;
    min-height: 48px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }
  .social-icons a:hover {
    background: linear-gradient(45deg, #3b82f6, #10b981);
    transform: scale(1.15) rotate(5deg);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    color: #1e293b;
  }
  .social-icons i {
    font-size: 1.25rem;
  }
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  .footer-links a {
    font-size: 0.9375rem;
    color: #e2e8f0;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    padding: 0.375rem 0;
    cursor: pointer;
  }
  .footer-links i {
    font-size: 0.8125rem;
    color: #3b82f6;
    transition: transform 0.3s ease;
  }
  .footer-links a:hover {
    color: #3b82f6;
    transform: translateX(6px);
  }
  .footer-links a:hover i {
    transform: scale(1.2);
  }
  .toggle-content {
    display: none;
    font-size: 0.875rem;
    line-height: 1.6;
    color: #e2e8f0;
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem;
    border-radius: 0.5rem;
    margin-top: 0.5rem;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
    transform: translateY(10px);
  }
  .toggle-content.active {
    display: block;
    opacity: 1;
    transform: translateY(0);
  }
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .newsletter-form input {
    padding: 0.875rem;
    border: 1px solid #475569;
    background: #1e3a4b;
    color: #e2e8f0;
    border-radius: 0.5rem;
    font-size: 0.9375rem;
    width: 100%;
    box-sizing: border-box;
    transition: all 0.3s ease;
  }
  .newsletter-form input:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.25);
    outline: none;
  }
  .newsletter-form button {
    padding: 0.875rem;
    background: linear-gradient(45deg, #3b82f6, #10b981);
    color: #ffffff;
    font-weight: 600;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 48px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .newsletter-form button:hover {
    background: linear-gradient(45deg, #2563eb, #059669);
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }
  .legal-section {
    border-top: 1px solid #475569;
    padding-top: 2rem;
    text-align: center;
    font-size: 0.875rem;
    opacity: 0.9;
  }
  .legal-section p {
    margin-bottom: 1rem;
  }
  .legal-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  .legal-links a {
    color: #e2e8f0;
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0.375rem 0;
  }
  .legal-links a:hover {
    color: #3b82f6;
  }
  footer a:focus, footer button:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 3px;
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.25);
  }
  @media (max-width: 1024px) {
    .footer-columns {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    .footer-logo img {
      max-width: 140px;
    }
    footer h5 {
      font-size: 1.125rem;
    }
    footer p, .footer-links a, .toggle-content {
      font-size: 0.875rem;
    }
    .social-icons a {
      width: 2.25rem;
      height: 2.25rem;
      min-width: 44px;
      min-height: 44px;
    }
    .social-icons i {
      font-size: 1.125rem;
    }
    .newsletter-form input, .newsletter-form button {
      font-size: 0.875rem;
      padding: 0.75rem;
    }
  }
  @media (max-width: 768px) {
    .footer-columns {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
    .footer-logo img {
      max-width: 120px;
    }
    footer h5 {
      font-size: 1rem;
    }
    footer p, .footer-links a, .toggle-content {
      font-size: 0.8125rem;
    }
    .social-icons {
      gap: 0.75rem;
    }
    .social-icons a {
      width: 2rem;
      height: 2rem;
      min-width: 40px;
      min-height: 40px;
    }
    .social-icons i {
      font-size: 1rem;
    }
    .newsletter-form input, .newsletter-form button {
      font-size: 0.8125rem;
      padding: 0.625rem;
    }
    .legal-section {
      font-size: 0.8125rem;
    }
    .legal-links {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>

{% comment %} Footer HTML structure {% endcomment %}
<footer>
  <div class="footer-container">
    <div class="footer-columns">
      {% comment %} Company Info {% endcomment %}
      <div class="footer-column">
        {% if section.settings.logo %}
          <div class="footer-logo">
            <img
              src="{{ section.settings.logo | img_url: '150x' }}"
              alt="{{ section.settings.company_name | escape }} Logo"
              loading="lazy"
            >
          </div>
        {% endif %}
        <p>{{ section.settings.address | escape }}</p>
        <div class="social-icons">
          {% if section.settings.email_url %}
            <a href="pages/contact" rel="noopener" aria-label="Email">
              <i class="fa-solid fa-envelope"></i>
            </a>
          {% endif %}
          {% if section.settings.facebook_url %}
            <a href="https://www.facebook.com/Pilates.Gear/" target="_blank" rel="noopener" aria-label="Facebook">
              <i class="fa-brands fa-facebook-f"></i>
            </a>
          {% endif %}
          {% if section.settings.youtube_url %}
            <a href="{{ section.settings.youtube_url | escape }}" target="_blank" rel="noopener" aria-label="YouTube">
              <i class="fa-brands fa-youtube"></i>
            </a>
          {% endif %}
        </div>
      </div>
      {% comment %} Shop Links {% endcomment %}
      <div class="footer-column">
        <h5>Shop</h5>
        <ul class="footer-links">
          <ul class="footer-links">
            <li>
              <a href="/collections/all?collection=Gymnastics"><i class="fa-solid fa-chevron-right"></i>Gymnastics</a>
            </li>
            <li>
              <a href="/collections/all?collection=Functional%20foods"
                ><i class="fa-solid fa-chevron-right"></i>Functional foods</a
              >
            </li>
            <li>
              <a href="/collections/all?collection=Men's%20fitness"
                ><i class="fa-solid fa-chevron-right"></i>Men's fitness</a
              >
            </li>
            <li>
              <a href="/collections/all?collection=Women's%20fitness"
                ><i class="fa-solid fa-chevron-right"></i>Women's fitness</a
              >
            </li>
            <li>
              <a href="/collections/all?collection=Accessory%20Cases"
                ><i class="fa-solid fa-chevron-right"></i>Accessory Cases</a
              >
            </li>
          </ul>
        </ul>
      </div>
      {% comment %} About Us Links with Toggle Content {% endcomment %}
      <div class="footer-column">
        <h5>About Us</h5>
        <ul class="footer-links">
          <li>
            <a onclick="toggleContent('our-mission')"><i class="fa-solid fa-chevron-right"></i>Our Mission</a>
            <div id="our-mission" class="toggle-content">
              We aim to inspire a healthy and active lifestyle in the community through high-quality products and
              dedicated service.
            </div>
          </li>
          <li>
            <a onclick="toggleContent('why-shop')"><i class="fa-solid fa-chevron-right"></i>Why Shop With Us</a>
            <div id="why-shop" class="toggle-content">
              Free nationwide shipping, authentic products, 24/7 customer support – you are always our top priority.
            </div>
          </li>
          <li>
            <a onclick="toggleContent('fitness-tips')"><i class="fa-solid fa-chevron-right"></i>Fitness Tips</a>
            <div id="fitness-tips" class="toggle-content">
              Expert articles and training tips to help you achieve your fitness goals quickly and safely.
            </div>
          </li>
          <li>
            <a onclick="toggleContent('faqs')"><i class="fa-solid fa-chevron-right"></i>FAQs</a>
            <div id="faqs" class="toggle-content">
              Have questions? Check out our quick answers on orders, payments, returns, and other policies here.
            </div>
          </li>
        </ul>
      </div>
      {% comment %} Newsletter Signup {% endcomment %}
      <div class="footer-column">
        <h5>{{ section.settings.newsletter_title | escape }}</h5>
        <p>{{ section.settings.newsletter_description | escape }}</p>
        <form class="newsletter-form" method="post" action="/contact#newsletter" aria-label="Newsletter Signup">
          <input type="hidden" name="form_id" value="newsletter_form">
          <input type="text" name="contact[name]" id="newsletter-name" placeholder="Name" required>
          <input type="email" name="contact[email]" id="newsletter-email" placeholder="Email" required>
          <button type="submit">Sign Up</button>
        </form>
      </div>
    </div>
    {% comment %} Copyright and Legal Links {% endcomment %}
    <div class="legal-section">
      <p>
        Copyright &copy; 2025 {{ section.settings.company_name | escape }}, All rights reserved. Powered by
        <a href="https://moxcreative.com" target="_blank" rel="noopener">MoxCreative</a>.
      </p>
      <div class="legal-links">
        <a href="/pages/terms-of-use">Terms of Use</a>
        <a href="/pages/privacy-policy">Privacy Policy</a>
        <a href="/pages/cookie-policy">Cookie Policy</a>
      </div>
    </div>
  </div>
</footer>

{% comment %} JavaScript for toggling content {% endcomment %}
<script>
  function toggleContent(id) {
    const content = document.getElementById(id);
    const isActive = content.classList.contains('active');

    // Hide all toggle content in the About Us section
    document.querySelectorAll('.footer-column .toggle-content').forEach((item) => {
      item.classList.remove('active');
    });

    // Show the clicked content if it wasn't already active
    if (!isActive) {
      content.classList.add('active');
    }
  }
</script>
