{% comment %} Defining schema for Shopify Theme Editor {% endcomment %}
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Dustrium"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Company Address",
      "default": "Vân Phú, Việt Trì, Phú Thọ, Việt Nam"
    },
    {
      "type": "text",
      "id": "email_url",
      "label": "Email URL",
      "default": "/contact"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL",
      "default": "https://www.facebook.com/Pilates.Gear/"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL",
      "default": "https://www.youtube.com/@TradeScalping6789"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Join Our Fitness Community"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Get workout tips, exclusive offers, and the latest on gym equipment and supplements."
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

