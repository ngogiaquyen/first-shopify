{% comment %} Defining schema for Shopify Theme Editor {% endcomment %}
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Dustrium"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Company Address",
      "default": "Room 901, Building A, Wanda Plaza, No. 121, Huaian East Road, Yuhua District, Shijiazhuang City, Hebei Province, China"
    },
    {
      "type": "text",
      "id": "whatsapp_url",
      "label": "WhatsApp URL",
      "default": "https://wa.me/1234567890"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL",
      "default": "https://facebook.com"
    },
    {
      "type": "text",
      "id": "linkedin_url",
      "label": "LinkedIn URL",
      "default": "https://linkedin.com"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL",
      "default": "https://youtube.com"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Subscribe to our Newsletter & Event"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Subscribe to our Newsletter & Event right now to be updated."
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% comment %} Load Tailwind CSS and Font Awesome for icons {% endcomment %}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

{% comment %} Footer HTML structure {% endcomment %}
<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      {% comment %} Company Info {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.settings.company_name | escape }}</h3>
        <p class="text-sm">{{ section.settings.address | escape }}</p>
        <div class="flex space-x-4 mt-4">
          {% if section.settings.whatsapp_url %}
            <a href="{{ section.settings.whatsapp_url | escape }}" target="_blank" rel="noopener" aria-label="WhatsApp" class="hover:text-gray-300">
              <i class="fab fa-whatsapp fa-lg"></i>
            </a>
          {% endif %}
          {% if section.settings.facebook_url %}
            <a href="{{ section.settings.facebook_url | escape }}" target="_blank" rel="noopener" aria-label="Facebook" class="hover:text-gray-300">
              <i class="fab fa-facebook-f fa-lg"></i>
            </a>
          {% endif %}
          {% if section.settings.linkedin_url %}
            <a href="{{ section.settings.linkedin_url | escape }}" target="_blank" rel="noopener" aria-label="LinkedIn" class="hover:text-gray-300">
              <i class="fab fa-linkedin-in fa-lg"></i>
            </a>
          {% endif %}
          {% if section.settings.youtube_url %}
            <a href="{{ section.settings.youtube_url | escape }}" target="_blank" rel="noopener" aria-label="YouTube" class="hover:text-gray-300">
              <i class="fab fa-youtube fa-lg"></i>
            </a>
          {% endif %}
        </div>
      </div>

      {% comment %} Support Links {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">Support</h3>
        <ul class="space-y-2">
          <li><a href="/collections/pilates-cadillac-bed" class="hover:text-gray-300">Pilates Cadillac Bed</a></li>
          <li><a href="/collections/pilates-reformer" class="hover:text-gray-300">Pilates Reformer</a></li>
          <li><a href="/collections/pilates-barrel" class="hover:text-gray-300">Pilates Barrel</a></li>
          <li><a href="/collections/pilates-chair" class="hover:text-gray-300">Pilates Chair</a></li>
          <li><a href="/collections/pilates-spine-corrector" class="hover:text-gray-300">Pilates Spine Corrector</a></li>
        </ul>
      </div>

      {% comment %} Company Links {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">Company</h3>
        <ul class="space-y-2">
          <li><a href="/pages/why-choose-us" class="hover:text-gray-300">Why Choose Us</a></li>
          <li><a href="/pages/our-factory" class="hover:text-gray-300">Our Factory</a></li>
          <li><a href="/pages/our-story" class="hover:text-gray-300">Our Story</a></li>
          <li><a href="/pages/faqs" class="hover:text-gray-300">FAQs</a></li>
        </ul>
      </div>

      {% comment %} Newsletter Signup {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.settings.newsletter_title | escape }}</h3>
        <p class="text-sm mb-4">{{ section.settings.newsletter_description | escape }}</p>
        <form action="/contact#newsletter" method="post" class="space-y-4">
          <input type="text" name="contact[name]" placeholder="Name" class="w-full p-2 text-gray-900 rounded" required>
          <input type="email" name="contact[email]" placeholder="Email" class="w-full p-2 text-gray-900 rounded" required>
          <button type="submit" class="bg-white text-gray-900 px-4 py-2 rounded hover:bg-gray-200">Subscribe</button>
        </form>
      </div>
    </div>

    {% comment %} Copyright and Legal Links {% endcomment %}
    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-sm">
      <p>Copyright &copy; 2023 {{ section.settings.company_name | escape }}, All rights reserved. Powered by <a href="https://moxcreative.com" target="_blank" rel="noopener" class="hover:text-gray-300">MoxCreative</a>.</p>
      <div class="flex justify-center space-x-4 mt-2">
        <a href="/pages/terms-of-use" class="hover:text-gray-300">Terms of Use</a>
        <a href="/pages/privacy-policy" class="hover:text-gray-300">Privacy Policy</a>
        <a href="/pages/cookie-policy" class="hover:text-gray-300">Cookie Policy</a>
      </div>
    </div>
  </div>
</footer>