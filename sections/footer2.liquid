{% comment %} Defining schema for Shopify Theme Editor {% endcomment %}
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Dustrium"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Company Address",
      "default": "Room 901, Building A, Wanda Plaza, No. 121, Huaian East Road, Yuhua District, Shijiazhuang City, Hebei Province, China"
    },
    {
      "type": "text",
      "id": "whatsapp_url",
      "label": "WhatsApp URL",
      "default": "https://wa.me/1234567890"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL",
      "default": "https://facebook.com"
    },
    {
      "type": "text",
      "id": "linkedin_url",
      "label": "LinkedIn URL",
      "default": "https://linkedin.com"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL",
      "default": "https://youtube.com"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Join Our Fitness Community"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Get workout tips, exclusive offers, and the latest on gym equipment and supplements."
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% comment %} Load Font Awesome for icons {% endcomment %}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

{% comment %} Pure CSS for modern footer styling {% endcomment %}
<style>
  footer {
    background: linear-gradient(180deg, #1a202c 0%, #2d3748 100%);
    color: #e2e8f0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    padding: 3rem 0;
  }
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  footer h3 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 1rem;
    position: relative;
    color: #ffffff;
  }
  footer h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 2rem;
    height: 2px;
    background-color: #68d391;
    transition: width 0.3s ease;
  }
  footer h3:hover::after {
    width: 4rem;
  }
  footer p {
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }
  .social-icons {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }
  .social-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }
  .social-icons a:hover {
    background-color: #68d391;
    transform: scale(1.1);
    color: #1a202c;
  }
  .social-icons i {
    font-size: 1.25rem;
  }
  footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  footer ul li {
    margin-bottom: 0.75rem;
  }
  footer ul a {
    font-size: 0.875rem;
    color: #e2e8f0;
    text-decoration: none;
    transition: color 0.3s ease, transform 0.2s ease;
  }
  footer ul a:hover {
    color: #68d391;
    transform: translateX(4px);
  }
  footer form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  footer form input {
    padding: 0.75rem;
    border: 1px solid #4a5568;
    background-color: #2d3748;
    color: #e2e8f0;
    border-radius: 0.5rem;
    font-size: 0.875rem;
  }
  footer form input:focus {
    border-color: #68d391;
    box-shadow: 0 0 0 3px rgba(104, 211, 145, 0.2);
    outline: none;
  }
  footer form button {
    padding: 0.75rem 1rem;
    background-color: #68d391;
    color: #1a202c;
    font-weight: 600;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }
  footer form button:hover {
    background-color: #4ade80;
    transform: translateY(-2px);
  }
  footer__copyright a{
    margin:50px;
  }
  .legal-section {
    border-top: 1px solid #4a5568;
    margin-top: 3rem;
    padding-top: 2rem;
    text-align: center;
    font-size: 0.875rem;
  }
  .legal-section p {
    margin-bottom: 1rem;
  }
  .legal-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }
  .legal-links a {
    color: #e2e8f0;
    text-decoration: none;
    position: relative;
    transition: color 0.3s ease;
  }
  .legal-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: #68d391;
    transition: width 0.3s ease;
  }
  .legal-links a:hover {
    color: #68d391;
  }
  .legal-links a:hover::after {
    width: 100%;
  }
  footer a:focus, footer button:focus {
    outline: 2px solid #68d391;
    outline-offset: 2px;
  }
  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr;
    }
    footer h3::after {
      width: 1.5rem;
    }
    footer h3:hover::after {
      width: 3rem;
    }
    .social-icons a {
      width: 2rem;
      height: 2rem;
    }
    .social-icons i {
      font-size: 1rem;
    }
    .legal-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>

{% comment %} Footer HTML structure {% endcomment %}
<footer>
  <div class="footer-container">
    {% comment %} Company Info {% endcomment %}
    <div>
      <h3>{{ section.settings.company_name | escape }}</h3>
      <p>{{ section.settings.address | escape }}</p>
      <div class="social-icons">
        {% if section.settings.whatsapp_url %}
          <a href="{{ section.settings.whatsapp_url | escape }}" target="_blank" rel="noopener" aria-label="WhatsApp">
            <i class="fab fa-whatsapp"></i>
          </a>
        {% endif %}
        {% if section.settings.facebook_url %}
          <a href="{{ section.settings.facebook_url | escape }}" target="_blank" rel="noopener" aria-label="Facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
        {% endif %}
        {% if section.settings.linkedin_url %}
          <a href="{{ section.settings.linkedin_url | escape }}" target="_blank" rel="noopener" aria-label="LinkedIn">
            <i class="fab fa-linkedin-in"></i>
          </a>
        {% endif %}
        {% if section.settings.youtube_url %}
          <a href="{{ section.settings.youtube_url | escape }}" target="_blank" rel="noopener" aria-label="YouTube">
            <i class="fab fa-youtube"></i>
          </a>
        {% endif %}
      </div>
    </div>

    {% comment %} Support Links {% endcomment %}
    <div>
      <h3>Shop</h3>
      <ul>
        <li><a href="/collections/treadmills">Treadmills</a></li>
        <li><a href="/collections/dumbbells">Dumbbells</a></li>
        <li><a href="/collections/resistance-bands">Resistance Bands</a></li>
        <li><a href="/collections/protein-powders">Protein Powders</a></li>
        <li><a href="/collections/pre-workouts">Pre-Workouts</a></li>
      </ul>
    </div>

    {% comment %} Company Links {% endcomment %}
    <div>
      <h3>About Us</h3>
      <ul>
        <li><a href="/pages/our-mission">Our Mission</a></li>
        <li><a href="/pages/why-shop-with-us">Why Shop With Us</a></li>
        <li><a href="/pages/fitness-tips">Fitness Tips</a></li>
        <li><a href="/pages/faqs">FAQs</a></li>
      </ul>
    </div>

    {% comment %} Newsletter Signup {% endcomment %}
    <div>
      <h3>{{ section.settings.newsletter_title | escape }}</h3>
      <p>{{ section.settings.newsletter_description | escape }}</p>
      <form action="/contact#newsletter" method="post">
        <input type="text" name="contact[name]" placeholder="Name" required>
        <input type="email" name="contact[email]" placeholder="Email" required>
        <button type="submit">Subscribe</button>
      </form>
    </div>
  </div>

</footer>