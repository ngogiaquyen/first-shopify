{% comment %} Defining schema for Shopify Theme Editor {% endcomment %}
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Dustrium"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Company Address",
      "default": "Room 901, Building A, Wanda Plaza, No. 121, Huaian East Road, Yuhua District, Shijiazhuang City, Hebei Province, China"
    },
    {
      "type": "text",
      "id": "whatsapp_url",
      "label": "WhatsApp URL",
      "default": "https://wa.me/1234567890"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL",
      "default": "https://facebook.com"
    },
    {
      "type": "text",
      "id": "linkedin_url",
      "label": "LinkedIn URL",
      "default": "https://linkedin.com"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL",
      "default": "https://youtube.com"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Subscribe to our Newsletter & Event"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Subscribe to our Newsletter & Event right now to be updated."
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% comment %} Load Tailwind CSS and Font Awesome for icons {% endcomment %}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

{% comment %} Custom CSS for modern footer styling {% endcomment %}
<style>
  footer {
    background: linear-gradient(180deg, #1a202c 0%, #2d3748 100%);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  footer h3 {
    position: relative;
    padding-bottom: 0.5rem;
    color: #ffffff;
  }
  footer h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 2rem;
    height: 2px;
    background-color: #68d391;
    transition: width 0.3s ease;
  }
  footer h3:hover::after {
    width: 4rem;
  }
  footer p, footer a {
    color: #e2e8f0;
    transition: color 0.3s ease, transform 0.2s ease;
  }
  footer a:hover {
    color: #68d391;
    transform: translateX(4px);
  }
  footer .social-icons a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    transition: background-color 0.3s ease, transform 0.3s ease;
  }
  footer .social-icons a:hover {
    background-color: #68d391;
    transform: scale(1.1);
  }
  footer .social-icons i {
    color: #ffffff;
  }
  footer .social-icons a:hover i {
    color: #1a202c;
  }
  footer form input,
  footer form button {
    transition: all 0.3s ease;
  }
  footer form input {
    background-color: #2d3748;
    border: 1px solid #4a5568;
    color: #e2e8f0;
  }
  footer form input:focus {
    border-color: #68d391;
    box-shadow: 0 0 0 3px rgba(104, 211, 145, 0.2);
    outline: none;
  }
  footer form button {
    background-color: #68d391;
    color: #1a202c;
    font-weight: 600;
  }
  footer form button:hover {
    background-color: #4ade80;
    transform: translateY(-2px);
  }
  footer .legal-links a {
    position: relative;
  }
  footer .legal-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: #68d391;
    transition: width 0.3s ease;
  }
  footer .legal-links a:hover::after {
    width: 100%;
  }
  footer a:focus, footer button:focus {
    outline: 2px solid #68d391;
    outline-offset: 2px;
  }
  @media (max-width: 768px) {
    footer .grid {
      grid-template-columns: 1fr;
    }
    footer h3::after {
      width: 1.5rem;
    }
    footer h3:hover::after {
      width: 3rem;
    }
    footer .social-icons a {
      width: 2rem;
      height: 2rem;
    }
  }
</style>

{% comment %} Footer HTML structure {% endcomment %}
<footer class="py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      {% comment %} Company Info {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.settings.company_name | escape }}</h3>
        <p class="text-sm leading-relaxed">{{ section.settings.address | escape }}</p>
        <div class="flex space-x-4 mt-6 social-icons">
          {% if section.settings.whatsapp_url %}
            <a href="{{ section.settings.whatsapp_url | escape }}" target="_blank" rel="noopener" aria-label="WhatsApp">
              <i class="fab fa-whatsapp fa-lg"></i>
            </a>
          {% endif %}
          {% if section.settings.facebook_url %}
            <a href="{{ section.settings.facebook_url | escape }}" target="_blank" rel="noopener" aria-label="Facebook">
              <i class="fab fa-facebook-f fa-lg"></i>
            </a>
          {% endif %}
          {% if section.settings.linkedin_url %}
            <a href="{{ section.settings.linkedin_url | escape }}" target="_blank" rel="noopener" aria-label="LinkedIn">
              <i class="fab fa-linkedin-in fa-lg"></i>
            </a>
          {% endif %}
          {% if section.settings.youtube_url %}
            <a href="{{ section.settings.youtube_url | escape }}" target="_blank" rel="noopener" aria-label="YouTube">
              <i class="fab fa-youtube fa-lg"></i>
            </a>
          {% endif %}
        </div>
      </div>

      {% comment %} Support Links {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">Support</h3>
        <ul class="space-y-3">
          <li><a href="/collections/pilates-cadillac-bed" class="hover:text-gray-300">Pilates Cadillac Bed</a></li>
          <li><a href="/collections/pilates-reformer" class="hover:text-gray-300">Pilates Reformer</a></li>
          <li><a href="/collections/pilates-barrel" class="hover:text-gray-300">Pilates Barrel</a></li>
          <li><a href="/collections/pilates-chair" class="hover:text-gray-300">Pilates Chair</a></li>
          <li><a href="/collections/pilates-spine-corrector" class="hover:text-gray-300">Pilates Spine Corrector</a></li>
        </ul>
      </div>

      {% comment %} Company Links {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">Company</h3>
        <ul class="space-y-3">
          <li><a href="/pages/why-choose-us" class="hover:text-gray-300">Why Choose Us</a></li>
          <li><a href="/pages/our-factory" class="hover:text-gray-300">Our Factory</a></li>
          <li><a href="/pages/our-story" class="hover:text-gray-300">Our Story</a></li>
          <li><a href="/pages/faqs" class="hover:text-gray-300">FAQs</a></li>
        </ul>
      </div>

      {% comment %} Newsletter Signup {% endcomment %}
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.settings.newsletter_title | escape }}</h3>
        <p class="text-sm mb-6 leading-relaxed">{{ section.settings.newsletter_description | escape }}</p>
        <form action="/contact#newsletter" method="post" class="space-y-4">
          <input type="text" name="contact[name]" placeholder="Name" class="w-full p-3 rounded-lg" required>
          <input type="email" name="contact[email]" placeholder="Email" class="w-full p-3 rounded-lg" required>
          <button type="submit" class="w-full px-4 py-3 rounded-lg">Subscribe</button>
        </form>
      </div>
    </div>

    {% comment %} Copyright and Legal Links {% endcomment %}
    <div class="border-t border-gray-700 mt-12 pt-8 text-center text-sm legal-links">
      <p>Copyright &copy; 2023 {{ section.settings.company_name | escape }}, All rights reserved. Powered by <a href="https://moxcreative.com" target="_blank" rel="noopener">MoxCreative</a>.</p>
      <div class="flex justify-center space-x-6 mt-4">
        <a href="/pages/terms-of-use">Terms of Use</a>
        <a href="/pages/privacy-policy">Privacy Policy</a>
        <a href="/pages/cookie-policy">Cookie Policy</a>
      </div>
    </div>
  </div>
</footer>