    },
    {
      "type": "text",
      "id": "email_url",
      "label": "Email URL",
      "default": "mailto:support@dustrium.com"
    },
    {
      "type": "text",
      "id": "whatsapp_url",
      "label": "WhatsApp URL",
      "default": "https://wa.me/18231139331"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL",
      "default": "https://www.facebook.com/JoyMaRaetin"
    },
    {
      "type": "text",
      "id": "linkedin_url",
      "label": "LinkedIn URL",
      "default": "https://linkedin.com"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL",
      "default": "https://www.youtube.com/@TradeScalping6789"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter Title",
      "default": "Join Our Fitness Community"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Newsletter Description",
      "default": "Get workout tips, exclusive offers, and the latest on gym equipment and supplements."
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Custom"
    }
  ]
}
{% endschema %}

