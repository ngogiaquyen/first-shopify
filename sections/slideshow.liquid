{% comment %} Styles for slideshow with zoom animation, top progress bar, responsive design, Buy Now button, secondary image box, overlay, and navigation controls optimized for mobile and tablet {% endcomment %}
<style>
  .slideshow-container {
    min-width: 100vw;
    height: calc(100vh - 64px);
    position: relative;
    margin: auto;
    overflow: hidden;
    margin-top: 64px;
  }
  .slides-wrapper {
    display: flex;
    width: 100%;
    height: 100%;
  }

  .slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.6s ease-in-out, transform 5s ease-in-out;
  }
  .slide.active {
    opacity: 1;
    transform: scale(1.1);
  }
  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .slide-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    top: 50%;
    left: 10%;
    right: 10%;
    max-width: 80%;
    transform: translateY(-50%);
    color: white;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    z-index: 2;
  }
  .slide-text {
    max-width: 40%;
    text-align: left;
  }
  .slide-text h2 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 15px;
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-in-out, transform 0.8s ease-in-out;
  }
  .slide-text p {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 20px;
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-in-out 0.2s, transform 0.8s ease-in-out 0.2s;
  }
  .slide-text .buy-now-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #ff0000;
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 5px;
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-in-out 0.4s, transform 0.8s ease-in-out 0.4s, background-color 0.3s ease, transform 0.3s ease;
  }
  .slide-text .buy-now-button:hover {
    background-color: #e60000;
    transform: translateX(-50px) scale(1.05);
  }
  .slide-image-box {
    max-width: 40%;
    opacity: 0;
    transform: translateX(50px);
    transition: opacity 0.8s ease-in-out 0.6s, transform 0.8s ease-in-out 0.6s;

  }
  .slide-image-box img {
    width: 100%;
    height: auto;
    border-radius: 0 10px 0 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.5);
    object-fit: cover;
  }
  .slide.active .slide-text h2,
  .slide.active .slide-text p,
  .slide.active .slide-text .buy-now-button,
  .slide.active .slide-image-box {
    opacity: 1;
    transform: translateX(0);
  }
  .progress-bar-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 8px;
    background-color: rgba(251, 69, 69, 0.5);
    z-index: 1;
  }
  .progress-bar {
    height: 100%;
    background-color: #ff0000;
    width: 0;
    transition: width 5s linear;
  }
  .progress-bar.active {
    width: 100%;
  }

  .slideshow-overlay {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    --tw-gradient-from: red;
    --tw-gradient-to: color-mix(in oklab, oklch(13% .028 261.692) 80%, transparent);
    --tw-gradient-position: to top in oklab;
    background-image: linear-gradient(
      var(--tw-gradient-position),
      var(--tw-gradient-from),
      var(--tw-gradient-to)
    );
    z-index: 0;
  }

  .nav-controls {
    position: absolute;
    bottom: 20px;
    left: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
    z-index: 3;
  }
  .nav-button {
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.8);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    font-size: 20px;
    color: #333;
  }
  .nav-button:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: scale(1.1);
  }
  .nav-button:active {
    transform: scale(0.95);
  }
  .dot-container {
    display: flex;
    gap: 8px;
  }
  .dot {
    width: 12px;
    height: 12px;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .dot.active {
    background-color: #ff0000;
  }

  /* Tablet (max-width: 1024px) */
  @media screen and (max-width: 1024px) {
    .slideshow-container {
      height: calc(100vh - 56px);
      margin-top: 56px;
    }
    .slide-content {
      display: flex;
      flex-direction: column-reverse;
      top: 50%;
      left: 5%;
      right: 5%;
      max-width: 90%;
      align-items: center;
      text-align: center;
      transform: translateY(-50%);
    }
    .slide-text {
      max-width: 80%;
      margin-bottom: 20px;
    }
    .slide-text h2 {
      font-size: 2rem;
      margin-bottom: 12px;
    }
    .slide-text p {
      font-size: 1.2rem;
      margin-bottom: 15px;
    }
    .slide-text .buy-now-button {
      font-size: 1rem;
      padding: 10px 20px;
      transform: translateX(0);
    }
    .slide-text .buy-now-button:hover {
      transform: scale(1.05);
    }
    .slide-image-box {
      max-width: 50%;
      margin-top: 0;
    }
    .slide.active {
      transform: scale(1.05);
    }
    .progress-bar-container {
      height: 6px;
    }
    .nav-controls {
      bottom: 15px;
      left: 50%;
      transform: translateX(-50%);
      gap: 8px;
    }
    .nav-button {
      width: 35px;
      height: 35px;
      font-size: 18px;
    }
    .dot {
      width: 10px;
      height: 10px;
    }
    .slide-image-box img {
      margin-bottom: 20px;
    }
  }

  /* Mobile (max-width: 768px) */
  @media screen and (max-width: 768px) {
    .slideshow-container {
      height: calc(100vh - 48px);
      margin-top: 48px;
    }
    .slide-content {
      max-width: 95%;
      align-items: center;
    }
    .slide-image-box {
      max-width: 100%;
      {% comment %} display: none; /* Hide secondary image on mobile for better space usage */ {% endcomment %}
    }
    
    .slide-text{
      width: 100%
    }
    .slide-text {
      max-width: 90%;
    }
    .slide-text h2 {
      font-size: 1.5rem;
      margin-bottom: 8px;
    }
    .slide-text p {
      font-size: 1rem;
      margin-bottom: 10px;
    }
    .slide-text .buy-now-button {
      font-size: 0.9rem;
      padding: 8px 16px;
    }
    .slide.active {
      transform: scale(1.03);
    }
    .progress-bar-container {
      height: 5px;
    }
    .nav-controls {
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      gap: 6px;
    }
    .nav-button {
      width: 30px;
      height: 30px;
      font-size: 16px;
    }
    .dot {
      width: 8px;
      height: 8px;
    }
    .dot-container {
      gap: 6px;
    }

    
    .slide-image-box img {
      width: 100%;
      height: auto;
    }
  }

  /* Small mobile (max-width: 480px) */
  @media screen and (max-width: 480px) {
    .slideshow-container {
      height: calc(100vh - 40px);
      margin-top: 40px;
    }
    .slide-content {
      max-width: 95%;
    }


    .slide-text h2 {
      font-size: 1.2rem;
      margin-bottom: 6px;
    }
    .slide-text p {
      font-size: 0.9rem;
      margin-bottom: 8px;
    }
    .slide-text .buy-now-button {
      font-size: 0.8rem;
      padding: 6px 12px;
    }
    .nav-controls {
      bottom: 8px;
    }
    .nav-button {
      width: 28px;
      height: 28px;
      font-size: 14px;
    }
    .dot {
      width: 6px;
      height: 6px;
    }
    .dot-container {
      gap: 4px;
    }
  }
</style>

{% comment %} Slideshow HTML structure with Buy Now button, customizable label, secondary image box, and navigation controls {% endcomment %}
<div class="slideshow-container">
  <div class="slides-wrapper">
    {% for i in (1..7) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign secondary_image_key = 'secondary_image_' | append: i %}
      {% assign title_key = 'title_' | append: i %}
      {% assign subtitle_key = 'subtitle_' | append: i %}
      {% assign button_url_key = 'button_url_' | append: i %}
      {% assign button_label_key = 'button_label_' | append: i %}
      {% if section.settings[image_key] %}
        <div class="slide">
          <img src="{{ section.settings[image_key] | img_url: 'master' }}" alt="{{ section.settings[title_key] }}">
          <div class="slide-content">
            <div class="slide-text">
              <h2>{{ section.settings[title_key] }}</h2>
              <p>{{ section.settings[subtitle_key] }}</p>
              {% if section.settings[button_url_key] and section.settings[button_label_key] %}
                <a href="{{ section.settings[button_url_key] }}" class="buy-now-button">{{ section.settings[button_label_key] }}</a>
              {% endif %}
            </div>
            {% if section.settings[secondary_image_key] %}
              <div class="slide-image-box">
                <img src="{{ section.settings[secondary_image_key] | img_url: 'large' }}" alt="Secondary Image {{ i }}">
              </div>
            {% endif %}
          </div>
          <div class="slideshow-overlay"></div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="progress-bar-container">
    <div class="progress-bar"></div>
  </div>
  <div class="nav-controls">
    <button class="nav-button prev"><i class="fas fa-caret-left"></i></button>
    <div class="dot-container">
      {% for i in (1..7) %}
        {% assign image_key = 'image_' | append: i %}
        {% if section.settings[image_key] %}
          <span class="dot" data-slide="{{ i | minus: 1 }}"></span>
        {% endif %}
      {% endfor %}
    </div>
    <button class="nav-button next"><i class="fas fa-caret-right"></i></button>
  </div>
</div>

{% comment %} JavaScript for slideshow functionality with zoom, progress bar, and navigation controls {% endcomment %}
<script>
  // Load Font Awesome
  const fontAwesome = document.createElement('link');
  fontAwesome.rel = 'stylesheet';
  fontAwesome.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css';
  document.head.appendChild(fontAwesome);

  let slideIndex = 0;
  let progressInterval;

  function showSlides() {
    let slides = document.getElementsByClassName("slide");
    let dots = document.getElementsByClassName("dot");
    let progressBar = document.querySelector(".progress-bar");

    if (slideIndex >= slides.length) { slideIndex = 0 }
    if (slideIndex < 0) { slideIndex = slides.length - 1 }

    // Hide all slides and reset transform
    for (let i = 0; i < slides.length; i++) {
      slides[i].classList.remove("active");
      slides[i].style.transform = "scale(1)";
      if (dots[i]) dots[i].classList.remove("active");
    }

    // Show current slide with zoom effect
    slides[slideIndex].classList.add("active");
    if (dots[slideIndex]) dots[slideIndex].classList.add("active");

    // Reset and start progress bar
    progressBar.style.width = '0';
    progressBar.classList.add("active");
  }

  function nextSlide() {
    slideIndex++;
    showSlides();
    startProgressBar();
  }

  function prevSlide() {
    slideIndex--;
    showSlides();
    startProgressBar();
  }

  function goToSlide(index) {
    slideIndex = index;
    showSlides();
    startProgressBar();
  }

  function startProgressBar() {
    clearInterval(progressInterval);
    let progressBar = document.querySelector(".progress-bar");
    progressBar.style.width = '0';
    progressBar.classList.add("active");
    progressInterval = setInterval(() => {
      nextSlide();
    }, 5000);
  }

  // Initialize slideshow
  showSlides();
  startProgressBar();

  // Event listeners for navigation buttons
  document.querySelector(".nav-button.prev").addEventListener("click", () => {
    prevSlide();
  });

  document.querySelector(".nav-button.next").addEventListener("click", () => {
    nextSlide();
  });

  // Event listeners for dots
  document.querySelectorAll(".dot").forEach(dot => {
    dot.addEventListener("click", () => {
      goToSlide(parseInt(dot.getAttribute("data-slide")));
    });
  });
</script>