{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

{% comment %} Load Font Awesome for icons {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fontAwesome = document.createElement('link');
    fontAwesome.rel = 'stylesheet';
    fontAwesome.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css';
    document.head.appendChild(fontAwesome);
  });
</script>

{% comment %} Styles for contact page with single image layout {% endcomment %}
<style>
  .com_info {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    background-color: #f9fafb;
  }
  .com_info .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.5rem 1.5rem;
  }
  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }
  .col-left {
    flex: 1;
    min-width: 0;
  }
  .col-right {
    flex: 1;
    min-width: 0;
  }
  .page-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: 0;
  }
  .page-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .page-image-wrapper:hover .page-image {
    transform: scale(1.05);
  }
  .page-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0));
    z-index: 1;
  }
  .rte {
    background-color: #fff;
    padding: 2rem;
    margin: 0;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .content_ct p {
    font-size: 1.1rem;
    color: #4a5568;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    text-align: left;
  }
  .contact-section {
    margin-top: 1rem;
    text-align: left;
  }
  .contact-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  .form-control {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  .form-control:focus {
    outline: none;
    border-color: #48bb78;
    box-shadow: 0 0 8px rgba(72, 187, 120, 0.3);
  }
  .form-control::placeholder {
    color: #a0aec0;
  }
  textarea.form-control {
    resize: vertical;
    min-height: 150px;
  }
  .require {
    font-size: 1rem;
    color: #a0aec0;
    margin-bottom: 1rem;
  }
  .required {
    color: #e53e3e;
  }
  .book-submit {
    padding: 1rem 2.5rem;
    background-color: #48bb78;
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .book-submit:hover {
    background-color: #38a169;
    transform: scale(1.05);
  }
  .google-map {
    margin-top: 2rem;
    font-size: 1.1rem;
    color: #4a5568;
    text-align: left;
    font-style: italic;
  }
  @media screen and (max-width: 768px) {
    .row {
      flex-direction: column;
    }
    .col-left,
    .col-right {
      flex: 100%;
    }
    .page-image-wrapper {
      width: 100%;
    }
    .page-image {
      height: 300px;
    }
    .rte {
      padding: 1.5rem;
    }
    .contact-title {
      font-size: 2rem;
    }
    .form-control {
      font-size: 1rem;
      padding: 0.75rem;
    }
    .book-submit {
      padding: 0.75rem 2rem;
      font-size: 1.1rem;
    }
    .google-map {
      font-size: 1rem;
    }
  }
  @media screen and (max-width: 480px) {
    .page-image {
      height: 200px;
    }
    .contact-title {
      font-size: 1.5rem;
    }
    .form-control {
      font-size: 0.95rem;
      padding: 0.5rem;
    }
    .book-submit {
      padding: 0.5rem 1.5rem;
      font-size: 1rem;
    }
    .google-map {
      font-size: 0.95rem;
    }
  }
</style>

<div class="com_info">
  <div class="container">
    <div class="row">
      <div class="col-left">
        {% if section.settings.header_image %}
          <div class="page-image-wrapper">
            <img src="{{ section.settings.header_image | img_url: 'master' }}" alt="Header Image" class="page-image" loading="lazy">
            <div class="page-image-overlay"></div>
          </div>
        {% endif %}
      </div>
      <div class="col-right">
        <div class="rte">
          <div class="content_ct">
            {{ page.content }}
          </div>
          <div class="contact-section">
            <h2 class="contact-title">Contact Information</h2>
            <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8">
              <input name="form_type" type="hidden" value="contact">
              <input name="utf8" type="hidden" value="âœ“">
              <div class="customer-name">
                <div class="form-group">
                  <input type="text" class="form-control" name="contact[name]" placeholder="Name *" required>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control" name="contact[email]" placeholder="Email *" required>
                </div>
                <div class="form-group">
                  <textarea name="contact[body]" placeholder="Message *" class="form-control" rows="3" required></textarea>
                </div>
              </div>
              <span class="require d-block mb-3"><em class="required">*</em> Required information</span>
              <div class="buttons-set">
                <button type="submit" title="Submit" class="book-submit">
                  <span>Send</span>
                </button>
              </div>
            </form>
            <div class="google-map mt-4">
              Room 901, Building A, Wanda Plaza, No. 121, Huaian East Road, Yuhua District, Shijiazhuang City, Hebei Province, China
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.page",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Image"
    }
  ]
}
{% endschema %}