{% comment %} Styles and scripts for contact page with two-column layout {% endcomment %}
<style>
  .com_info {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
    background-color: #f9fafb;
  }
  .com_info .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.5rem 1.5rem;
  }
  .row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }
  .col-left {
    flex: 1;
    min-width: 0;
  }
  .col-right {
    flex: 1;
    min-width: 0;
  }
  .page-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin-bottom: 0;
  }
  .page-slideshow {
    position: relative;
    width: 100%;
    height: 500px;
  }
  .page-image {
    display: none;
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.5s ease, transform 0.3s ease;
  }
  .page-image.active {
    display: block;
    opacity: 1;
  }
  .page-image-wrapper:hover .page-image.active {
    transform: scale(1.05);
  }
  .page-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0));
    z-index: 1;
  }
  .slideshow-controls {
    position: absolute;
    top: 50%;
    width: 100%;
    transform: translateY(-50%);
    z-index: 2;
    display: flex;
    justify-content: space-between;
    padding: 0 1rem;
  }
  .slideshow-btn {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 0.75rem;
    cursor: pointer;
    font-size: 1.5rem;
    transition: background-color 0.3s ease;
  }
  .slideshow-btn:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }
  .slideshow-dots {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    gap: 0.5rem;
  }
  .dot {
    width: 10px;
    height: 10px;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .dot.active {
    background-color: white;
  }
  .rte {
    background-color: #fff;
    padding: 2rem;
    margin: 0;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .content_ct p {
    font-size: 1.1rem;
    color: #4a5568;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    text-align: left;
  }
  .contact-section {
    margin-top: 1rem;
    text-align: left;
  }
  .contact-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  .form-control {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  .form-control:focus {
    outline: none;
    border-color: #48bb78;
    box-shadow: 0 0 8px rgba(72, 187, 120, 0.3);
  }
  .form-control::placeholder {
    color: #a0aec0;
  }
  textarea.form-control {
    resize: vertical;
    min-height: 150px;
  }
  .require {
    font-size: 1rem;
    color: #a0aec0;
    margin-bottom: 1rem;
  }
  .required {
    color: #e53e3e;
  }
  .book-submit {
    padding: 1rem 2.5rem;
    background-color: #48bb78;
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .book-submit:hover {
    background-color: #38a169;
    transform: scale(1.05);
  }
  .google-map {
    margin-top: 2rem;
    font-size: 1.1rem;
    color: #4a5568;
    text-align: left;
    font-style: italic;
  }
  @media screen and (max-width: 768px) {
    .row {
      flex-direction: column;
    }
    .col-left,
    .col-right {
      flex: 100%;
    }
    .page-image-wrapper {
      width: 100%;
    }
    .page-slideshow {
      height: 300px;
    }
    .rte {
      padding: 1.5rem;
    }
    .contact-title {
      font-size: 2rem;
    }
    .form-control {
      font-size: 1rem;
      padding: 0.75rem;
    }
    .book-submit {
      padding: 0.75rem 2rem;
      font-size: 1.1rem;
    }
    .google-map {
      font-size: 1rem;
    }
  }
  @media screen and (max-width: 480px) {
    .page-slideshow {
      height: 200px;
    }
    .contact-title {
      font-size: 1.5rem;
    }
    .form-control {
      font-size: 0.95rem;
      padding: 0.5rem;
    }
    .book-submit {
      padding: 0.5rem 1.5rem;
      font-size: 1rem;
    }
    .google-map {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.page-image');
    const prevBtn = document.createElement('button');
    const nextBtn = document.createElement('button');
    const dotsContainer = document.createElement('div');
    let currentSlide = 0;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.remove('active');
        if (i === index) slide.classList.add('active');
      });
      updateDots();
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + slides.length) % slides.length;
      showSlide(currentSlide);
    }

    function createControls() {
      prevBtn.classList.add('slideshow-btn');
      prevBtn.innerHTML = '<i class="fas fa-chevron-left"></i>';
      nextBtn.classList.add('slideshow-btn');
      nextBtn.innerHTML = '<i class="fas fa-chevron-right"></i>';
      const controls = document.querySelector('.slideshow-controls');
      controls.appendChild(prevBtn);
      controls.appendChild(nextBtn);

      dotsContainer.classList.add('slideshow-dots');
      slides.forEach((_, i) => {
        const dot = document.createElement('div');
        dot.classList.add('dot');
        dot.addEventListener('click', () => showSlide(i));
        dotsContainer.appendChild(dot);
      });
      document.querySelector('.page-image-wrapper').appendChild(dotsContainer);
    }

    function updateDots() {
      const dots = document.querySelectorAll('.dot');
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentSlide);
      });
    }

    // Chuyển slide tự động mỗi 3 giây
    setInterval(nextSlide, 3000);

    // Thêm điều khiển
    createControls();

    // Gán sự kiện cho nút
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);

    // Hiển thị slide đầu tiên khi tải trang
    showSlide(currentSlide);
  });
</script>

<div class="com_info">
  <div class="container">
    <div class="row">
      <div class="col-left">
        {% if section.settings.header_image or section.settings.header_image_2 or section.settings.header_image_3 or section.settings.header_image_4 %}
          <div class="page-image-wrapper">
            <div class="page-slideshow">
              <div class="slideshow-controls"></div>
              {% if section.settings.header_image %}
                <img src="{{ section.settings.header_image | img_url: 'master' }}" alt="Header Image 1" class="page-image" loading="lazy">
              {% endif %}
              {% if section.settings.header_image_2 %}
                <img src="{{ section.settings.header_image_2 | img_url: 'master' }}" alt="Header Image 2" class="page-image" loading="lazy">
              {% endif %}
              {% if section.settings.header_image_3 %}
                <img src="{{ section.settings.header_image_3 | img_url: 'master' }}" alt="Header Image 3" class="page-image" loading="lazy">
              {% endif %}
              {% if section.settings.header_image_4 %}
                <img src="{{ section.settings.header_image_4 | img_url: 'master' }}" alt="Header Image 4" class="page-image" loading="lazy">
              {% endif %}
              <div class="page-image-overlay"></div>
            </div>
          </div>
        {% endif %}
      </div>
      <div class="col-right">
        <div class="rte">
          <div class="content_ct">
            {{ page.content }}
          </div>
          <div class="contact-section">
            <h2 class="contact-title">Contact Information</h2>
            <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8">
              <input name="form_type" type="hidden" value="contact">
              <input name="utf8" type="hidden" value="✓">
              <div class="customer-name">
                <div class="form-group">
                  <input type="text" class="form-control" name="contact[name]" placeholder="Name *" required>
                </div>
                <div class="form-group">
                  <input type="email" class="form-control" name="contact[email]" placeholder="Email *" required>
                </div>
                <div class="form-group">
                  <textarea name="contact[body]" placeholder="Message *" class="form-control" rows="3" required></textarea>
                </div>
              </div>
              <span class="require d-block mb-3"><em class="required">*</em> Required information</span>
              <div class="buttons-set">
                <button type="submit" title="Submit" class="book-submit">
                  <span>Send</span>
                </button>
              </div>
            </form>
            <div class="google-map mt-4">
              Room 901, Building A, Wanda Plaza, No. 121, Huaian East Road, Yuhua District, Shijiazhuang City, Hebei Province, China
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

