{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

{% comment %} Load Font Awesome for icons {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fontAwesome = document.createElement('link');
    fontAwesome.rel = 'stylesheet';
    fontAwesome.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css';
    document.head.appendChild(fontAwesome);
  });
</script>

{% comment %} Styles for contact page with content, contact information, and enhanced image {% endcomment %}
<style>
  .com_info {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
  }
  .com_info .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }
  .page-image-wrapper {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    overflow: hidden;
    margin-bottom: 1.5rem;
  }
  .page-image {
    display: block;
    width: 100%;
    height: 400px; /* Chiều cao cố định, có thể điều chỉnh */
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  .page-image-wrapper:hover .page-image {
    transform: scale(1.05); /* Zoom nhẹ khi hover */
  }
  .page-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)); /* Hiệu ứng mờ từ trên xuống */
    z-index: 1;
  }
  .rte {
    background-color: #fff;
    padding: 3rem;
    margin: 0 auto;
    max-width: 100%;
  }
  .content_ct p {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  .contact-section {
    margin-top: 2rem;
    text-align: center;
  }
  .contact-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }
  .form-group {
    margin-bottom: 1rem;
  }
  .form-control {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border: 1px solid #d1d5db;
    border-radius: 5px;
    transition: border-color 0.3s ease;
  }
  .form-control:focus {
    outline: none;
    border-color: #2aab46;
    box-shadow: 0 0 5px rgba(42, 171, 70, 0.3);
  }
  .form-control::placeholder {
    color: #6b7280;
  }
  textarea.form-control {
    resize: vertical;
    min-height: 100px;
  }
  .require {
    font-size: 0.9rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }
  .required {
    color: #e53e3e;
  }
  .book-submit {
    padding: 0.75rem 1.5rem;
    background-color: #2aab46;
    color: white;
    font-size: 1rem;
    font-weight: 500;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  .book-submit:hover {
    background-color: #218838;
    transform: scale(1.05);
  }
  .google-map {
    margin-top: 2rem;
    font-size: 1rem;
    color: #4a5568;
    text-align: center;
  }
  @media screen and (max-width: 768px) {
    .com_info .container {
      margin: 0;
      padding: 2rem 0;
      width: 100%;
      max-width: 100%;
    }
    .rte {
      padding: 2rem 0.5rem;
    }
    .page-image-wrapper {
      margin-left: calc(-50vw + 50%);
      width: 100vw;
    }
    .page-image {
      height: 300px; /* Giảm chiều cao trên tablet */
    }
    .content_ct p {
      font-size: 0.95rem;
      padding: 0 0.5rem;
    }
    .contact-title {
      font-size: 1.5rem;
      padding: 0 0.5rem;
    }
    .form-control {
      font-size: 0.95rem;
    }
    .book-submit {
      width: 100%;
      max-width: 300px;
    }
    .google-map {
      font-size: 0.95rem;
      padding: 0 0.5rem;
    }
  }
  @media screen and (max-width: 480px) {
    .com_info .container {
      padding: 1.5rem 0;
    }
    .page-image-wrapper {
      margin-left: calc(-50vw + 50%);
      width: 100vw;
    }
    .page-image {
      height: 200px; /* Giảm chiều cao trên mobile */
    }
    .content_ct p {
      font-size: 0.9rem;
    }
    .contact-title {
      font-size: 1.3rem;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .book-submit {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
    .google-map {
      font-size: 0.9rem;
    }
  }
</style>

<div class="com_info">
  <div class="container">
    {% if section.settings.header_image %}
      <div class="page-image-wrapper">
        <img src="{{ section.settings.header_image | img_url: 'master' }}" alt="Header Image" class="page-image" loading="lazy">
        <div class="page-image-overlay"></div>
      </div>
    {% endif %}
    <div class="rte m-auto bg-white pt-3 pb-3">
      <div class="row">
        <div class="col-md-6 col-12">
          <div class="content_ct">
            {{ page.content }}
          </div>
        </div>
        <div class="col-md-6 col-12">
          <div class="contact-section">
            <h2 class="contact-title">Contact Information</h2>
            <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8">
              <input name="form_type" type="hidden" value="contact">
              <input name="utf8" type="hidden" value="✓">
              <div class="customer-name row">
                <div class="col-12 form-group">
                  <input type="text" class="form-control" name="contact[name]" placeholder="Name *" required>
                </div>
                <div class="col-12 form-group">
                  <input type="email" class="form-control" name="contact[email]" placeholder="Email *" required>
                </div>
                <div class="col-12 form-group">
                  <textarea name="contact[body]" placeholder="Message *" class="form-control" rows="3" required></textarea>
                </div>
              </div>
              <span class="require d-block mb-3"><em class="required">*</em> Required information</span>
              <div class="buttons-set">
                <button type="submit" title="Submit" class="book-submit btn btn-primary text-center d-flex align-items-center font-weight-bold">
                  <span>Send</span>
                </button>
              </div>
            </form>
            <div class="google-map mt-4">
              Room 901, Building A, Wanda Plaza, No. 121, Huaian East Road, Yuhua District, Shijiazhuang City, Hebei Province, China
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.page",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Image"
    }
  ]
}
{% endschema %}