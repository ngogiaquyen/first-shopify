{% comment %} Styles for contact page with form, address, and social links {% endcomment %}
<style>
  .com_info {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
  }
  .com_info .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }
  .page_title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  .rte {
    background-color: #fff;
    padding: 3rem;
    margin: 0 auto;
    max-width: 100%;
  }
  .content_ct p {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  .form-group {
    margin-bottom: 1rem;
  }
  .form-control {
    width: 100%;
    padding: 0.75rem;
    font-size: 1rem;
    border: 1px solid #ced4da;
    border-radius: 5px;
    color: #4a5568;
  }
  .form-control::placeholder {
    color: #6c757d;
  }
  textarea.form-control {
    resize: vertical;
    min-height: 100px;
  }
  .require {
    font-size: 0.9rem;
    color: #6c757d;
  }
  .require .required {
    color: #dc3545;
  }
  .buttons-set .book-submit {
    background-color: #2aab46;
    border: none;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
    width: 100%;
    max-width: 200px;
    justify-content: center;
  }
  .buttons-set .book-submit:hover {
    background-color: #218838;
    transform: scale(1.05);
  }
  .google-map {
    font-size: 1rem;
    color: #4a5568;
    text-align: center;
    margin-top: 2rem;
  }
  .contact-section {
    margin-top: 2rem;
    text-align: center;
  }
  .contact-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }
  .contact-list {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .contact-item a {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background-color: #2aab46;
    color: white;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }
  .contact-item a:hover {
    background-color: #218838;
    transform: scale(1.05);
  }
  .contact-item i {
    font-size: 1.2rem;
    margin-right: 0.5rem;
  }
  @media screen and (max-width: 768px) {
    .com_info .container {
      margin: 0;
      padding: 2rem 0;
      width: 100%;
      max-width: 100%;
    }
    .rte {
      padding: 2rem 0.5rem;
    }
    .page_title {
      font-size: 2rem;
      padding: 0 0.5rem;
    }
    .content_ct p {
      font-size: 0.95rem;
      padding: 0 0.5rem;
    }
    .form-control {
      font-size: 0.95rem;
    }
    .buttons-set .book-submit {
      max-width: 100%;
    }
    .google-map {
      font-size: 0.95rem;
      padding: 0 0.5rem;
    }
    .contact-title {
      font-size: 1.5rem;
      padding: 0 0.5rem;
    }
    .contact-list {
      flex-direction: column;
      gap: 1rem;
    }
    .contact-item a {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
  @media screen and (max-width: 480px) {
    .com_info .container {
      padding: 1.5rem 0;
    }
    .page_title {
      font-size: 1.5rem;
    }
    .content_ct p {
      font-size: 0.9rem;
    }
    .form-control {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    .buttons-set .book-submit {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
    .google-map {
      font-size: 0.9rem;
    }
    .contact-title {
      font-size: 1.3rem;
    }
    .contact-item a {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
    .contact-item i {
      font-size: 1rem;
    }
  }
</style>

<div class="com_info">
  <div class="container">
    <h1 class="font-weight-bold text-center pt-3 page_title">
      {{ page.title }}
    </h1>
    <div class="rte m-auto bg-white pt-3 pb-3">
      <div class="row">
        <div class="col-md-6 col-12">
          <div class="content_ct">
            {{ page.content }}
          </div>
        </div>
        <div class="col-md-6 col-12">
          {% form 'contact', id: 'contact', class: 'contact-form' %}
            {% if form.posted_successfully? %}
              <p class="form-success">Thank you for your submission! We'll get back to you soon.</p>
            {% endif %}
            {% if form.errors %}
              <div class="form-errors">
                {% for field in form.errors %}
                  <p class="error">{{ field }} {{ form.errors.messages[field] }}</p>
                {% endfor %}
              </div>
            {% endif %}
            <input type="hidden" id="Token-contact-form" name="contact[Token]">
            <script src="https://www.google.com/recaptcha/api.js?render=6Ldtu4IUAAAAAMQzG1gCw3wFlx_GytlZyLrXcsuK"></script>
            <script>
              grecaptcha.ready(function() {
                grecaptcha.execute("6Ldtu4IUAAAAAMQzG1gCw3wFlx_GytlZyLrXcsuK", {action: "contact"}).then(function(token) {
                  document.getElementById("Token-contact-form").value = token;
                });
              });
            </script>
            <div class="customer-name row">
              <div class="col-12 form-group">
                <input type="text" class="form-control" name="contact[Name]" placeholder="Name *" required>
              </div>   
              <div class="col-12 form-group">
                <input type="email" class="form-control" name="contact[email]" placeholder="Email *" required>
              </div>
              <label class="d-none">Message <span class="required">*</span></label>
              <div class="col-12 form-group">
                <textarea name="contact[Body]" placeholder="Message *" class="form-control" rows="3" required></textarea>                        
              </div>
            </div>
            <span class="require d-block mb-3"><em class="required">* </em>Required fields</span>
            <div class="buttons-set">
              <button type="submit" title="Submit" class="book-submit btn btn-primary text-center d-flex align-items-center font-weight-bold subml"> <span>Send</span> </button>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.page",
  "settings": [
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "info": "Enter the contact email address (e.g., sonkoyy9669@gmail.com)"
    },
    {
      "type": "url",
      "id": "facebook",
      "label": "Facebook URL",
      "info": "Enter the full URL to your Facebook page (e.g., https://facebook.com/yourpage)"
    },
    {
      "type": "url",
      "id": "youtube",
      "label": "YouTube URL",
      "info": "Enter the full URL to your YouTube channel (e.g., https://youtube.com/yourchannel)"
    }
  ]
}
{% endschema %}