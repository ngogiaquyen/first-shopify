{% comment %} Load Font Awesome for icons {% endcomment %}
<script>
  // Load Font Awesome
  document.addEventListener('DOMContentLoaded', () => {
    const fontAwesome = document.createElement('link');
    fontAwesome.rel = 'stylesheet';
    fontAwesome.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css';
    document.head.appendChild(fontAwesome);
  });
</script>

{% comment %} Styles for contact page with content and contact information {% endcomment %}
<style>
  .com_info {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 0;
  }
  .com_info .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }
  .page_title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  .rte {
    background-color: #fff;
    padding: 3rem;
    margin: 0 auto;
    max-width: 100%;
  }
  .content_ct p {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  .contact-section {
    margin-top: 2rem;
    text-align: center;
  }
  .contact-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }
  .contact-list {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .contact-item a {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background-color: #2aab46;
    color: white;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }
  .contact-item a:hover {
    background-color: #218838;
    transform: scale(1.05);
  }
  .contact-item i {
    font-size: 1.2rem;
    margin-right: 0.5rem;
  }
  @media screen and (max-width: 768px) {
    .com_info .container {
      margin: 0;
      padding: 2rem 0;
      width: 100%;
      max-width: 100%;
    }
    .rte {
      padding: 2rem 0.5rem;
    }
    .page_title {
      font-size: 2rem;
      padding: 0 0.5rem;
    }
    .content_ct p {
      font-size: 0.95rem;
      padding: 0 0.5rem;
    }
    .contact-title {
      font-size: 1.5rem;
      padding: 0 0.5rem;
    }
    .contact-list {
      flex-direction: column;
      gap: 1rem;
    }
    .contact-item a {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
  @media screen and (max-width: 480px) {
    .com_info .container {
      padding: 1.5rem 0;
    }
    .page_title {
      font-size: 1.5rem;
    }
    .content_ct p {
      font-size: 0.9rem;
    }
    .contact-title {
      font-size: 1.3rem;
    }
    .contact-item a {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
    .contact-item i {
      font-size: 1rem;
    }
  }
</style>

<div class="com_info">
  <div class="container">
    <h1 class="font-weight-bold text-center pt-3 page_title">
      {{ page.title }}
    </h1>
    <div class="rte m-auto bg-white pt-3 pb-3">
      <div class="row">
        <div class="col-md-6 col-12">
          <div class="content_ct">
            {{ page.content }}
          </div>
        </div>
        <div class="col-md-6 col-12">
          <div class="contact-section">
            <h2 class="contact-title">Contact Information</h2>
            <div class="contact-list">
              <div class="contact-item">
                <a href="mailto:tientruongvo123@gmail.com">
                  <i class="fas fa-envelope"></i>
                  tientruongvo123@gmail.com
                </a>
              </div>
              <div class="contact-item">
                <a href="https://www.facebook.com/vo.truong.tien.416254/" target="_blank">
                  <i class="fab fa-facebook-f"></i>
                  Facebook
                </a>
              </div>
              <div class="contact-item">
                <a href="https://www.youtube.com/@TradeScalping6789" target="_blank">
                  <i class="fab fa-youtube"></i>
                  YouTube
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

