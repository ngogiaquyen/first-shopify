{% comment %} Styles for customer reviews section with two-row scrolling carousel {% endcomment %}
<style>
  .reviews-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    text-align: center;
    width: 100%;
  }
  .reviews-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: #1a1a1a;
  }
  .reviews-carousel {
    overflow: hidden;
    position: relative;
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .reviews-grid-top {
    display: flex;
    flex-wrap: nowrap;
    gap: 1.5rem;
    animation: scroll-left 30s linear infinite;
  }
  .reviews-grid-bottom {
    display: flex;
    flex-wrap: nowrap;
    gap: 1.5rem;
    animation: scroll-right 30s linear infinite;
  }
  .reviews-grid-top.paused,
  .reviews-grid-bottom.paused {
    animation-play-state: paused;
  }
  .review-card {
    background: #ffffff;
    border-radius: 30px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    text-align: left;
    min-width: 280px;
    max-width: 350px;
    flex: 0 0 auto;
    transition: transform 0.3s ease-in-out;
  }
  .review-card:hover {
    transform: translateY(-5px);
  }
  .review-header {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  .review-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #e2e8f0;
    margin-right: 1rem;
    overflow: hidden;
  }
  .review-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .review-rating {
    color: #facc15;
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  .review-text {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.5;
  }
  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes scroll-right {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0);
    }
  }
  @media screen and (max-width: 768px) {
    .reviews-container {
      margin: 20px 0;
      padding: 2rem 0;
      width: 100%;
      max-width: 100%;
    }
    .reviews-title {
      font-size: 2rem;
      padding: 0 0.5rem;
    }
    .reviews-grid-top,
    .reviews-grid-bottom {
      gap: 1rem;
    }
    .review-card {
      min-width: 240px;
      max-width: 100%;
      padding: 1.2rem;
    }
    .review-avatar {
      width: 40px;
      height: 40px;
    }
    .review-text {
      font-size: 0.95rem;
    }
  }
  @media screen and (max-width: 480px) {
    .reviews-container {
      padding: 1.5rem 0;
    }
    .reviews-title {
      font-size: 1.5rem;
    }
    .reviews-grid-top,
    .reviews-grid-bottom {
      gap: 0.8rem;
    }
    .review-card {
      min-width: 200px;
      padding: 1rem;
    }
    .review-avatar {
      width: 36px;
      height: 36px;
    }
    .review-text {
      font-size: 0.9rem;
    }
  }
</style>

{% comment %} JavaScript for carousel duplication and pause-on-hover {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Function to setup carousel for a given grid
    function setupCarousel(gridSelector) {
      const grid = document.querySelector(gridSelector);
      if (!grid) return;

      // Duplicate review cards for seamless looping
      const reviewCards = grid.querySelectorAll('.review-card');
      reviewCards.forEach(card => {
        const clone = card.cloneNode(true);
        grid.appendChild(clone);
      });

      // Pause animation on hover
      grid.addEventListener('mouseenter', () => {
        grid.classList.add('paused');
      });
      grid.addEventListener('mouseleave', () => {
        grid.classList.remove('paused');
      });
    }

    // Setup both carousels
    setupCarousel('.reviews-grid-top');
    setupCarousel('.reviews-grid-bottom');
  });
</script>

{% comment %} Customer reviews HTML structure with two rows {% endcomment %}
<section class="reviews-container">
  <h2 class="reviews-title">{{ section.settings.title }}</h2>
  {% assign reviews = "I can do pilates whenever I want, without going out into the weather.|Our reformer has exceeded our expectations. It arrived quickly and the customer service is 5 stars.|Very impressed with the quality of the machine!|Having my own reformer has given me the opportunity to exercise when I want in the privacy of my own home.|So glad I chose this reformer with The Pilates Shop|Love using my machine|Everything I hoped and more!|The convenience of having it at home is brilliant|Love my Refoife.|Tailored workouts like having a personal trainer at home." | split: "|" %}
  
  {% comment %} Top row: Right to Left {% endcomment %}
  <div class="reviews-carousel">
    <div class="reviews-grid-top">
      {% for review in reviews limit: 5 %}
        {% assign index = forloop.index %}
        {% assign avatar_key = "avatar_" | append: index %}
        <div class="review-card">
          <div class="review-header">
            <div class="review-avatar">
              {% if section.settings[avatar_key] %}
                <img src="{{ section.settings[avatar_key] | img_url: '100x100' }}" alt="Customer Avatar {{ index }}" loading="lazy">
              {% else %}
                <img src="{{ 'avatar-placeholder.jpg' | asset_url }}" alt="Customer Avatar Placeholder" loading="lazy">
              {% endif %}
            </div>
            <div class="review-rating">★★★★★</div>
          </div>
          <p class="review-text">{{ review }}</p>
        </div>
      {% endfor %}
    </div>
  </div>

  {% comment %} Bottom row: Left to Right {% endcomment %}
  <div class="reviews-carousel">
    <div class="reviews-grid-bottom">
      {% for review in reviews offset: 5 %}
        {% assign index = forloop.index0 | plus: 6 %}
        {% assign avatar_key = "avatar_" | append: index %}
        <div class="review-card">
          <div class="review-header">
            <div class="review-avatar">
              {% if section.settings[avatar_key] %}
                <img src="{{ section.settings[avatar_key] | img_url: '100x100' }}" alt="Customer Avatar {{ index }}" loading="lazy">
              {% else %}
                <img src="{{ 'avatar-placeholder.jpg' | asset_url }}" alt="Customer Avatar Placeholder" loading="lazy">
              {% endif %}
            </div>
            <div class="review-rating">★★★★★</div>
          </div>
          <p class="review-text">{{ review }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>