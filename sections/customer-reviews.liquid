{% comment %} CSS optimized for mobile and tablet with 2 items per row, no box-shadow, with image support {% endcomment %}
<style>
    .stats-section {
        width: 100%;
        max-width: 1000px;
        margin: 30px auto;
        padding: 15px;
        box-sizing: border-box;
        text-align: center;
        display: flex;
        flex-direction: column;
        opacity: 1;
    }

    .stats-title {
        margin-bottom: 12px;
        text-transform: uppercase;
        font-size: 1.8rem;
        font-weight: 600;
        line-height: 1.2em;
        color: #1A1A1A;
        font-family: 'Inter', sans-serif;
        background: linear-gradient(90deg, #2aab46, #1a73e8);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        opacity: 0;
        transform: translateY(15px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

    .stats-section.active .stats-title {
        opacity: 1;
        transform: translateY(0);
    }

    .stats-line {
        height: 2px;
        background: linear-gradient(90deg, #2aab46, #1a73e8);
        width: 60%;
        margin: 0 auto 15px;
        opacity: 0;
        transform: scaleX(0);
        transform-origin: left;
        transition: opacity 0.8s ease-out 0.3s, transform 0.8s ease-out 0.3s;
    }

    .stats-section.active .stats-line {
        opacity: 1;
        transform: scaleX(1);
    }

    .stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .stat-item {
        flex: 1 1 calc(25% - 20px);
        min-width: 140px;
        text-align: center;
        padding: 15px;
        background: linear-gradient(135deg, #ffffff, #f0f4f8);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: hidden;
        opacity: 1;
        transform: translateY(0);
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .stat-item.highlight {
        background: linear-gradient(135deg, #e6f0fa, #d4e4f7);
        transform: scale(1.05);
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .stat-item:hover {
        background: linear-gradient(135deg, #e6f0fa, #d4e4f7);
        transform: scale(1.05);
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .stat-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 50%, rgba(42, 171, 70, 0.15), transparent 70%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .stat-item:hover::before,
    .stat-item.highlight::before {
        opacity: 1;
    }

    .stat-image {
        width: 48px;
        height: 48px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 8px;
        transition: transform 0.3s ease;
    }

    .stat-item:hover .stat-image,
    .stat-item.highlight .stat-image {
        transform: scale(1.1);
    }

    .stat-icon {
        font-size: 2rem;
        color: #2aab46;
        margin-bottom: 8px;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .stat-item:hover .stat-icon,
    .stat-item.highlight .stat-icon {
        color: #1a73e8;
        transform: scale(1.1);
    }

    .stat-number {
        font-size: 1.6rem;
        font-weight: 700;
        color: #1A1A1A;
        margin: 6px 0;
        font-family: 'Inter', sans-serif;
    }

    .stat-description {
        font-size: 0.8rem;
        color: #555;
        line-height: 1.4;
        font-family: 'Inter', sans-serif;
    }

    @media (max-width: 992px) {
        .stats-section {
            max-width: 100%;
            margin: 20px 0;
            padding: 10px;
        }
        .stats-title {
            font-size: 1.6rem;
            padding: 0 0.5rem;
        }
        .stats-line {
            width: 80%;
            margin-bottom: 12px;
        }
        .stats-container {
            gap: 16px;
            justify-content: space-between;
        }
        .stat-item {
            flex: 0 1 calc(50% - 8px);
            min-width: 140px;
            padding: 12px;
        }
        .stat-image {
            width: 40px;
            height: 40px;
        }
        .stat-icon {
            font-size: 1.8rem;
        }
        .stat-number {
            font-size: 1.4rem;
        }
        .stat-description {
            font-size: 0.75rem;
        }
    }

    @media (max-width: 576px) {
        .stats-section {
            margin: 20px 0;
            padding: 0;
            width: 100%;
            max-width: 100%;
        }
        .stats-title {
            text-align: center;
            font-size: 1.4rem;
            margin-bottom: 10px;
            padding: 0 0.5rem;
        }
        .stats-line {
            width: 90%;
            margin-bottom: 10px;
        }
        .stats-container {
            gap: 12px;
            justify-content: space-between;
        }
        .stat-item {
            flex: 0 1 calc(50% - 6px);
            min-width: 120px;
            padding: 10px;
        }
        .stat-image {
            width: 36px;
            height: 36px;
        }
        .stat-icon {
            font-size: 1.6rem;
        }
        .stat-number {
            font-size: 1.3rem;
        }
        .stat-description {
            font-size: 0.7rem;
        }
    }
</style>

{% comment %} JavaScript for looping highlight effect, disabled on mobile (≤576px) and tablet (≤992px) {% endcomment %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const statsSection = document.querySelector('.stats-section');
        const statItems = document.querySelectorAll('.stat-item');
        let currentIndex = 0;
        let intervalId = null;

        // Activate section title and line immediately
        statsSection.classList.add('active');

        // Function to reset highlight on all stat items
        function resetHighlights() {
            statItems.forEach(item => {
                item.classList.remove('highlight');
            });
        }

        // Function to highlight the next stat item
        function highlightNextItem() {
            resetHighlights();
            statItems[currentIndex].classList.add('highlight');
            currentIndex = (currentIndex + 1) % statItems.length; // Loop back to 0
        }

        // Function to start or stop the highlight loop based on screen width
        function manageHighlightLoop() {
            if (window.innerWidth > 992) {
                // Start or restart the interval for desktop devices
                if (!intervalId) {
                    highlightNextItem(); // Highlight the first item immediately
                    intervalId = setInterval(highlightNextItem, 5000);
                }
            } else {
                // Stop the interval and remove highlights for mobile and tablet devices
                if (intervalId) {
                    clearInterval(intervalId);
                    intervalId = null;
                    resetHighlights();
                }
            }
        }

        // Initial check for screen width
        manageHighlightLoop();

        // Re-check on window resize
        window.addEventListener('resize', manageHighlightLoop);
    });
</script>

