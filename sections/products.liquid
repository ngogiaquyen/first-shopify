{% comment %} Styles for product grid {% endcomment %}
<style>
  .product-grid-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 40px;
    text-align: center;
    letter-spacing: -0.02em;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }

  .product-card {
    position: relative;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    padding-bottom: 60px; /* Space for button */
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .product-card a {
    text-decoration: none;
    display: block;
  }

  .image-wrapper{
    position: relative;
  }

  .picture-product{
    position: absolute;
    top: 0;
    left: 0;
  }

  .product-card img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    border-radius: 12px 12px 0 0;
    transition: transform 0.3s ease;
  }

  .product-card:hover img {
    transform: scale(1.05);
  }

  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 70%, rgba(0, 0, 0, 0.1));
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .product-card:hover .product-overlay {
    opacity: 1;
  }

  .featured-products-3-column__item-text{
    padding: 12px;
  }

  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #1a1a1a;
    line-height: 1.4;
    min-height: 60px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 20px;
  }


  .product-prices {
    display: flex;
    justify-content: center;
    gap: 12px;
    align-items: baseline;
    margin: 0 15px 15px;
  }

  .price-original {
    font-size: 0.95rem;
    color: #6b7280;
    text-decoration: line-through;
    font-weight: 400;
  }

  .price-sale {
    font-size: 1.15rem;
    color: #dc2626;
    font-weight: 700;
  }

  .sale-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    background: #dc2626;
    color: #fff;
    font-size: 0.8rem;
    font-weight: 600;
    padding: 5px 10px;
    border-radius: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .add-to-cart {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: #2563eb; /* Modern blue instead of black */
    color: #fff;
    padding: 10px 24px;
    border-radius: 8px;
    font-size: 0.95rem;
    font-weight: 500;
    text-align: center;
    transition: background 0.3s ease, transform 0.2s ease;
    text-decoration: none;
    opacity: 0;
    visibility: hidden;
  }

  .product-card:hover .add-to-cart {
    opacity: 1;
    visibility: visible;
  }

  .add-to-cart:hover {
    background: #1d4ed8; /* Slightly darker blue on hover */
    transform: translateX(-50%) scale(1.05);
  }

  .underline-child {
    position: relative;
    display: inline-block;
  }

  .underline-child::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #1a1a1a;
    transition: width 0.3s ease;
  }

  .underline-child-on-hover:hover .underline-child::after {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .product-card img {
      height: 220px;
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
    .product-card img {
      height: 300px;
    }
    .title {
      font-size: 1.5rem;
    }
  }
</style>

