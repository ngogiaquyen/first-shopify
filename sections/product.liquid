{% comment %} Pure CSS for modern, fitness-focused product page styling {% endcomment %}
<style>
  /* General Product Section Styling */
.product-section {
  display: flex;
  flex-wrap: wrap;
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  gap: 30px;
  background-color: #ffffff; /* Light theme background */
}

/* Product Images Section */
.product-images {
  flex: 1 1 50%;
  min-width: 300px;
}

.images-container {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.product-image-main {
  width: 100%;
  max-width: 800px;
  height: auto;
  object-fit: cover;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.product-thumbnails {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.product-thumbnail {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 4px;
  cursor: pointer;
  border: 2px solid transparent;
  transition: border-color 0.3s ease, transform 0.3s ease;
}

.product-thumbnail.active,
.product-thumbnail:hover {
  border-color: #007bff;
  transform: scale(1.05);
}

/* Product Info Section */
.product-info {
  flex: 1 1 50%;
  min-width: 300px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.product-info h1 {
  font-size: 2rem;
  font-weight: 600;
  margin: 0;
  color: #1a1a1a; /* Dark text for light theme */
}

.product-price {
  display: flex;
  align-items: center;
  gap: 10px;
}

.price {
  font-size: 1.5rem;
  font-weight: 700;
  color: #007bff;
}

.compare-at-price {
  font-size: 1.2rem;
  color: #6c757d;
  text-decoration: line-through;
}

.product-availability {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 1rem;
  color: #28a745;
}

.product-availability .fas.fa-times-circle {
  color: #dc3545;
}

.description {
  font-size: 1rem;
  line-height: 1.6;
  color: #4a4a4a; /* Dark text for light theme */
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 1rem;
  color: #f1c40f;
}

.product-rating .fas {
  font-size: 1.2rem;
}

.product-rating span {
  color: #4a4a4a; /* Dark text for light theme */
}

/* Buy Now Form */
.buy-now-form {
  margin-top: 20px;
}

.buy-now {
  background-color: #007bff;
  color: #ffffff;
  border: none;
  padding: 12px 24px;
  font-size: 1.1rem;
  font-weight: 500;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.buy-now:hover {
  background-color: #0056b3;
}

/* Trust Badges */
.trust-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-top: 20px;
}

.trust-badge-item {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  color: #4a4a4a; /* Dark text for light theme */
}

.trust-badge-item .fas {
  font-size: 1.2rem;
  color: #007bff;
}

/* Dark Theme Support */
@media (prefers-color-scheme: dark) {
  .product-section {
    background-color: #1a1a1a;
  }

  .product-info h1,
  .description,
  .product-rating span,
  .trust-badge-item {
    color: #e0e0e0; /* Light text for dark theme */
  }

  .product-image-main {
    box-shadow: 0 2px 8px rgba(255, 255, 255, 0.1);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .product-section {
    flex-direction: column;
    padding: 15px;
  }

  .product-images,
  .product-info {
    flex: 1 1 100%;
  }

  .product-info h1 {
    font-size: 1.8rem;
  }

  .price {
    font-size: 1.3rem;
  }

  .compare-at-price {
    font-size: 1rem;
  }

  .buy-now {
    width: 100%;
    padding: 10px;
  }
}

@media (max-width: 480px) {
  .product-thumbnail {
    width: 80px;
    height: 80px;
  }

  .product-info h1 {
    font-size: 1.5rem;
  }

  .price {
    font-size: 1.2rem;
  }

  .trust-badges {
    flex-direction: column;
    align-items: flex-start;
  }
}
</style>

{% comment %} Product HTML structure {% endcomment %}
<div class="product-section">
  <div class="product-images">
    {% if product.images.size > 0 %}
      <div class="images-container">
        <img
          src="{{ product.featured_image | img_url: '800x800' }}"
          alt="{{ product.title | escape }} - Main Image"
          class="product-image-main"
          id="main-image"
        >
        <div class="product-thumbnails">
          {% for image in product.images limit: 4 %} <!-- Giới hạn tối đa 4 ảnh -->
            <img
              src="{{ image | img_url: '100x100' }}"
              alt="{{ product.title | escape }} - Thumbnail {{ forloop.index }}"
              class="product-thumbnail {% if forloop.first %}active{% endif %}"
              onclick="document.getElementById('main-image').src='{{ image | img_url: '800x800' }}'; this.parentElement.querySelectorAll('.product-thumbnail').forEach(el => el.classList.remove('active')); this.classList.add('active');"
            >
          {% endfor %}
        </div>
      </div>
    {% else %}
      <img src="{{ 'no-image.jpg' | asset_url }}" alt="No image available" class="product-image-main">
    {% endif %}
  </div>
  <div class="product-info">
    <h1>{{ product.title | escape }}</h1>
    <div class="product-price">
      <span class="price">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    {% if section.settings.show_availability %}
      <p class="product-availability">
        {% if product.available %}
          <i class="fas fa-check-circle"></i> In Stock
        {% else %}
          <i class="fas fa-times-circle"></i> Out of Stock
        {% endif %}
      </p>
    {% endif %}
    <p class="description">{{ product.description | strip_html | truncate: 200 }}</p>
    {% if section.settings.show_rating %}
      <div class="product-rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star-half-alt"></i>
        <span>4.5 (123 reviews)</span>
      </div>
    {% endif %}
    {% comment %} Buy Now button below description and rating {% endcomment %}
    {% form 'product', product, class: 'buy-now-form', aria-label: 'Buy now form' %}
      {% assign current_variant = product.selected_or_first_available_variant %}
      <input type="hidden" name="id" value="{{ current_variant.id }}">
      <input type="hidden" name="quantity" value="1">
      <input
        type="submit"
        name="checkout"
        value="{{ section.settings.buy_now_text | default: 'Buy Now' }}"
        class="buy-now"
      >
    {% endform %}
    {% if section.settings.show_trust_badges %}
      <div class="trust-badges">
        <div class="trust-badge-item"><i class="fas fa-shipping-fast"></i> Free Shipping</div>
        <div class="trust-badge-item"><i class="fas fa-lock"></i> Secure Checkout</div>
        <div class="trust-badge-item"><i class="fas fa-undo"></i> 30-Day Returns</div>
      </div>
    {% endif %}
  </div>
</div>

{% comment %} JavaScript for thumbnail interaction {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mainImage = document.getElementById('main-image');
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    thumbnails.forEach((thumb) => {
      thumb.addEventListener('click', function () {
        mainImage.src = this.src.replace('100x100', '800x800');
        thumbnails.forEach((t) => t.classList.remove('active'));
        this.classList.add('active');
      });
    });
  });
</script>

{% schema %}
{
  "name": "Product",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_availability",
      "label": "Show availability status",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show product rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show trust badges",
      "default": true
    },
    {
      "type": "text",
      "id": "add_to_cart_text",
      "label": "Add to cart button text",
      "default": "Add to cart"
    },
    {
      "type": "text",
      "id": "buy_now_text",
      "label": "Buy Now button text",
      "default": "Buy Now"
    },
    {
      "type": "text",
      "id": "trust_badge_1_url",
      "label": "Free Shipping URL",
      "default": "/pages/shipping-policy"
    },
    {
      "type": "text",
      "id": "trust_badge_2_url",
      "label": "Secure Checkout URL",
      "default": "/pages/secure-checkout"
    },
    {
      "type": "text",
      "id": "trust_badge_3_url",
      "label": "30-Day Returns URL",
      "default": "/pages/return-policy"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}