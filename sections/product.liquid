{% comment %} Pure CSS for modern, fitness-focused product page styling {% endcomment %}
<style>
  /* General Product Section Styling */
.product-section {
  display: flex;
  flex-wrap: wrap;
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  gap: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* Product Images Section */
.product-images {
  flex: 0 0 40%; /* Image takes ~40% of width, like Shopee */
  min-width: 300px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.images-container {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.product-image-main {
  width: 100%;
  max-width: 450px; /* Smaller main image, similar to Shopee */
  height: auto;
  max-height: 450px;
  object-fit: contain; /* Ensure image fits without cropping */
  background-color: #ffffff;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
  padding: 10px;
}

.product-thumbnails {
  display: flex;
  gap: 13px;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.product-thumbnail {
  width: 80px; /* Smaller thumbnails, Shopee style */
  height: 80px;
  object-fit: contain;
  background-color: #ffffff;
  border: 1px solid #e8e8e8;
  border-radius: 4px;
  cursor: pointer;
  transition: border-color 0.3s ease, transform 0.3s ease;
  padding: 5px;
}

.product-thumbnail.active,
.product-thumbnail:hover {
  border-color: #ee4d2d; /* Shopee's orange accent */
  transform: scale(1.03);
}

/* Product Info Section */
.product-info {
  flex: 0 0 55%; /* Text takes ~55% of width, like Shopee */
  min-width: 300px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-info h1 {
  font-size: 1.8rem;
  font-weight: 500;
  margin: 0;
  color: #333333;
  line-height: 1.4;
}

.product-price {
  display: flex;
  align-items: center;
  gap: 12px;
  background-color: #fafafa; /* Shopee-like price background */
  padding: 10px;
  border-radius: 4px;
}

.price {
  font-size: 1.8rem;
  font-weight: 600;
  color: #ee4d2d; /* Shopee's orange price color */
}

.compare-at-price {
  font-size: 1.2rem;
  color: #999999;
  text-decoration: line-through;
}

.product-availability {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  color: #05a;
}

.product-availability .fas.fa-times-circle {
  color: #d0011b;
}

.description {
  font-size: 0.95rem;
  line-height: 1.5;
  color: #555555;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  color: #ee4d2d; /* Shopee's orange for stars */
}

.product-rating .fas {
  font-size: 1rem;
}

.product-rating span {
  color: #ff1a1a;
}

/* Buy Now Form */
.buy-now-form {
  margin-top: 15px;
}

.buy-now {
  background-color: #ee4d2d; /* Shopee's orange button */
  color: #ffffff;
  border: none;
  padding: 12px 30px;
  font-size: 1rem;
  font-weight: 500;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  width: 200px; /* Fixed width like Shopee's buttons */
}

.buy-now:hover {
  background-color: #d73211; /* Darker orange on hover */
}

/* Trust Badges */
.trust-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 15px;
}

.trust-badge-item {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.85rem;
  color: #555555;
}

.trust-badge-item .fas {
  font-size: 1rem;
  color: #ee4d2d; /* Shopee's orange for icons */
}

/* Dark Theme Support */
{% comment %} @media (prefers-color-scheme: dark) {
  .product-section {
    {% comment %} background-color: #1a1a1a; {% endcomment %}
  }

  .product-info h1,
  .description,
  .product-rating span,
  .trust-badge-item {
    color: #e0e0e0;
  }

  .product-price {
    background-color: #2a2a2a;
  }

  .product-image-main,
  .product-thumbnail {
    background-color: #2a2a2a;
    border-color: #444444;
  }
} {% endcomment %}

/* Responsive Design */
@media (max-width: 768px) {
  .product-section {
    flex-direction: column;
    padding: 15px;
  }

  .product-images,
  .product-info {
    flex: 1 1 100%;
  }

  .product-image-main {
    max-width: 100%;
    max-height: 350px;
  }

  .product-info h1 {
    font-size: 1.6rem;
  }

  .price {
    font-size: 1.5rem;
  }

  .compare-at-price {
    font-size: 1rem;
  }

  .buy-now {
    width: 100%;
    padding: 10px;
  }
}

@media (max-width: 480px) {
  .product-section{
  flex-wrap: wrap;
  max-width: 100%;
}
  .product-thumbnail {
    width: 60px;
    height: 60px;
  }

  .product-info h1 {
    font-size: 1.4rem;
  }

  .price {
    font-size: 1.3rem;
  }

  .trust-badges {
    flex-direction: column;
    align-items: flex-start;
  }
}
</style>

{% comment %} Product HTML structure {% endcomment %}
<div class="product-section">
  <div class="product-images">
    {% if product.images.size > 0 %}
      <div class="images-container">
        <img
          src="{{ product.featured_image | img_url: '800x800' }}"
          alt="{{ product.title | escape }} - Main Image"
          class="product-image-main"
          id="main-image"
        >
        <div class="product-thumbnails">
          {% for image in product.images %} <!-- Giới hạn tối đa 4 ảnh -->
            <img
              src="{{ image | img_url: '100x100' }}"
              alt="{{ product.title | escape }} - Thumbnail {{ forloop.index }}"
              class="product-thumbnail {% if forloop.first %}active{% endif %}"
              onclick="document.getElementById('main-image').src='{{ image | img_url: '800x800' }}'; this.parentElement.querySelectorAll('.product-thumbnail').forEach(el => el.classList.remove('active')); this.classList.add('active');"
            >
          {% endfor %}
        </div>
      </div>
    {% else %}
      <img src="{{ 'no-image.jpg' | asset_url }}" alt="No image available" class="product-image-main">
    {% endif %}
  </div>
  <div class="product-info">
    <h1>{{ product.title | escape }}</h1>
    <div class="product-price">
      <span class="price">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    {% if section.settings.show_availability %}
      <p class="product-availability">
        {% if product.available %}
          <i class="fas fa-check-circle"></i> In Stock
        {% else %}
          <i class="fas fa-times-circle"></i> Out of Stock
        {% endif %}
      </p>
    {% endif %}
    <p class="description">{{ product.description | strip_html | truncate: 200 }}</p>
    {% if section.settings.show_rating %}
      {% if section.settings.show_rating %}
      <div class="product-rating">
        <span id="rating-stars"></span>
        <span id="rating-value"></span>
        <span id="view-count"></span>
      </div>
{% endif %}
    {% endif %}
    {% comment %} Buy Now button below description and rating {% endcomment %}
    {% form 'product', product, class: 'buy-now-form', aria-label: 'Buy now form' %}
      {% assign current_variant = product.selected_or_first_available_variant %}
      <input type="hidden" name="id" value="{{ current_variant.id }}">
      <input type="hidden" name="quantity" value="1">
      <input
        type="submit"
        name="checkout"
        value="{{ section.settings.buy_now_text | default: 'Buy Now' }}"
        class="buy-now"
      >
    {% endform %}
    {% if section.settings.show_trust_badges %}
      <div class="trust-badges">
        <div class="trust-badge-item"><i class="fas fa-shipping-fast"></i> Free Shipping</div>
        <div class="trust-badge-item"><i class="fas fa-lock"></i> Secure Checkout</div>
        <div class="trust-badge-item"><i class="fas fa-undo"></i> 30-Day Returns</div>
      </div>
    {% endif %}
  </div>
</div>

{% comment %} JavaScript for thumbnail interaction {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const productId = {{ product.id | json }};
    console.log('Product ID:', productId);

    // Gọi API để lấy hoặc tạo rating và view
    fetch(`https://ngogiaquyen.io.vn/shopify/index.php?product_id=${productId}`)
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        const ratingData = data.data;
        console.log(ratingData)
        if (ratingData) {
          const rating = parseFloat(ratingData.rating);
          const view = ratingData.view;

          // Hiển thị rating (giá trị số)
          const ratingValue = document.getElementById('rating-value');
          ratingValue.textContent = rating.toFixed(1);

          // Hiển thị ngôi sao
          const ratingStars = document.getElementById('rating-stars');
          const fullStars = Math.floor(rating); // Số sao đầy
          const hasHalfStar = rating % 1 >= 0.5; // Có sao nửa hay không
          let starsHtml = '';
          for (let i = 0; i < fullStars; i++) {
            starsHtml += '<i class="fas fa-star"></i>';
          }
          if (hasHalfStar) {
            starsHtml += '<i class="fas fa-star-half-alt"></i>';
          }
          for (let i = fullStars + (hasHalfStar ? 1 : 0); i < 5; i++) {
            starsHtml += '<i class="far fa-star"></i>';
          }
          ratingStars.innerHTML = starsHtml;

          // Hiển thị view
          const viewCount = document.getElementById('view-count');
          viewCount.textContent = `(${view} views)`;
        } else {
          console.error('No rating data received:', data);
          document.getElementById('rating-value').textContent = 'N/A';
          document.getElementById('view-count').textContent = '(0 views)';
        }
      })
      .catch(error => {
        console.error('Error fetching rating:', error);
        document.getElementById('rating-value').textContent = 'N/A';
        document.getElementById('view-count').textContent = '(0 views)';
      });

    // Logic thumbnail hiện có
    const mainImage = document.getElementById('main-image');
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    thumbnails.forEach((thumb) => {
      thumb.addEventListener('click', function () {
        mainImage.src = this.src.replace('100x100', '800x800');
        thumbnails.forEach((t) => t.classList.remove('active'));
        this.classList.add('active');
      });
    });
  });
</script>

