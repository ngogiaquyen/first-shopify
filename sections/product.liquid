{% comment %} Pure CSS for modern, fitness-focused product page styling {% endcomment %}
<style>
  .product-section {
    max-width: 1200px;
    margin-left: 55px;
    margin-bottom: 70px;
    padding: 20px 1rem;
    display: grid;
    grid-template-columns: 3fr 2fr; /* Tăng tỷ lệ phần hình ảnh (60%) và giảm phần mô tả (40%) */
    gap: 2rem;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #1a202c;
  }
  .product-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .images-container {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: flex-start;
  }
  .product-image-main {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: contain;
    border-radius: 0.5rem;
    background-color: #f7fafc;
    transition: transform 0.3s ease;
    max-width: 600px; /* Tăng kích thước tối đa của ảnh chính */
  }
  .product-image-main:hover {
    transform: scale(1.02);
  }
  .product-thumbnails {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    width: 100%; /* Đảm bảo thumbnails chiếm toàn bộ chiều rộng container */
    max-width: 100px; /* Giới hạn chiều rộng tối đa để hiển thị 1 cột trên desktop */
  }
  .product-thumbnail {
    width: 80px; /* Tăng kích thước thumbnail để rõ hơn */
    height: 80px;
    object-fit: cover;
    border-radius: 0.5rem;
    border: 2px solid transparent;
    cursor: pointer;
    transition: border-color 0.3s ease, transform 0.2s ease;
  }
  .product-thumbnail:hover,
  .product-thumbnail.active {
    border-color: #ef4444;
  }
  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .product-info h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
  }
  .product-price {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }
  .product-price .price {
    font-size: 1.25rem;
    font-weight: 600;
    color: #ef4444;
  }
  .product-price .compare-at-price {
    font-size: 1rem;
    color: #6b7280;
    text-decoration: line-through;
  }
  .product-availability {
    font-size: 0.75rem;
    color: #15803d;
  }
  .product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: #d97706;
  }
  .product-rating i {
    font-size: 0.875rem;
  }
  .product-info p.description {
    font-size: 0.875rem;
    line-height: 1.5;
    color: #4a5568;
  }
  .buy-now-form {
    display: inline-block;
    width: 100%;
  }
  .buy-now-form input[type="submit"] {
    width: 100%;
    padding: 0.625rem;
    background-color: #1a202c;
    color: #ffffff;
    font-weight: 600;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    min-height: 40px;
    font-size: 0.8125rem;
  }
  .buy-now-form input[type="submit"]:hover {
    background-color: #2d3748;
    transform: translateY(-2px);
  }
  .trust-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 0.75rem;
    color: #4a5568;
  }
  .trust-badges a {
    color: #4a5568;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0;
    transition: color 0.3s ease;
    position: relative;
  }
  .trust-badges a:hover {
    color: #ef4444;
  }
  .trust-badges a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: #ef4444;
    transition: width 0.3s ease;
  }
  .trust-badges a:hover::after {
    width: 100%;
  }
  .trust-badges i {
    color: #ef4444;
    margin-right: 0.25rem;
  }
  .product-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .quantity-selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .quantity-selector button {
    width: 2rem;
    height: 2rem;
    border: 1px solid #d1d5db;
    background-color: #f7fafc;
    color: #1a202c;
    font-size: 0.875rem;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    min-width: 40px;
    min-height: 40px;
  }
  .quantity-selector button:hover {
    background-color: #ef4444;
    color: #ffffff;
    transform: scale(1.05);
  }
  .quantity-selector input {
    width: 3.5rem;
    padding: 0.625rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.8125rem;
    text-align: center;
    background-color: #ffffff;
    color: #1a202c;
  }
  .quantity-selector input:focus {
    border-color: #ef4444;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
    outline: none;
  }
  .product-form .add-to-cart {
    padding: 0.625rem;
    background-color: #ef4444;
    color: #ffffff;
    font-weight: 600;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    min-height: 40px;
    font-size: 0.8125rem;
  }
  .product-form .add-to-cart:hover {
    background-color: #dc2626;
    transform: translateY(-2px);
  }
  .product-section a:focus, .product-section button:focus, .product-section input[type="submit"]:focus {
    outline: 2px solid #ef4444;
    outline-offset: 2px;
  }

  /* Tablet (768px - 1024px) */
  @media (max-width: 1024px) {
    .product-section {
      grid-template-columns: 1fr; /* Chuyển về một cột trên tablet */
      gap: 1.5rem;
    }
    .images-container {
      flex-direction: column;
      align-items: center;
    }
    .product-thumbnails {
      flex-direction: row;
      justify-content: center;
      width: 100%; /* Đảm bảo thumbnails chiếm toàn bộ chiều rộng */
      max-width: none; /* Bỏ giới hạn max-width để thumbnails trải đều */
    }
    .product-thumbnail {
      width: 80px; /* Giữ kích thước thumbnail lớn hơn */
      height: 80px;
    }
    .product-info h1 {
      font-size: 1.25rem;
    }
    .product-price .price {
      font-size: 1.125rem;
    }
    .product-price .compare-at-price {
      font-size: 0.875rem;
    }
    .product-image-main {
      max-height: 500px;
      width: 100%;
    }
    .buy-now-form input[type="submit"] {
      font-size: 0.75rem;
      padding: 0.5rem;
    }
  }

  /* Mobile (below 768px) */
  @media (max-width: 768px) {
    .product-section {
      gap: 1rem;
      margin: 0;
      margin-bottom: 30px;
      padding: 12px 0;
      width: 100%;
      max-width: 100%;
    }
    .images-container {
      flex-direction: column;
      width: 100%;
      align-items: center;
    }
    .product-thumbnails {
      flex-direction: row;
      gap: 0.5rem;
      justify-content: center;
      width: 100%; /* Đảm bảo thumbnails chiếm toàn bộ chiều rộng */
      max-width: none; /* Bỏ giới hạn max-width */
      order: 2;
      max-height: calc(100vh - 56px);
      overflow-y: auto;
      padding: 0 0.5rem; /* Thêm padding để không sát mép */
    }
    .product-thumbnail {
      width: 70px; /* Kích thước thumbnail hợp lý cho mobile */
      height: 70px;
    }
    .product-image-main {
      max-height: 400px;
      order: 1;
      width: 100%;
      max-width: none; /* Đảm bảo ảnh chính full chiều rộng */
    }
    .product-info {
      width: 100%;
      padding: 0 0.5rem;
    }
    .product-info h1 {
      font-size: 1rem;
    }
    .product-price .price {
      font-size: 1rem;
    }
    .product-price .compare-at-price {
      font-size: 0.75rem;
    }
    .product-info p.description {
      font-size: 0.75rem;
    }
    .quantity-selector input {
      width: 2.5rem;
    }
    .quantity-selector button {
      width: 1.75rem;
      height: 1.75rem;
      min-width: 32px;
      min-height: 32px;
    }
    .product-form .add-to-cart,
    .buy-now-form input[type="submit"] {
      font-size: 0.7rem;
    }
  }
</style>

{% comment %} Product HTML structure {% endcomment %}
<div class="product-section">
  <div class="product-images">
    {% if product.images.size > 0 %}
      <div class="images-container">
        <div class="product-thumbnails">
          {% for image in product.images %}
            <img
              src="{{ image | img_url: '100x100' }}"
              alt="{{ product.title | escape }} - Thumbnail {{ forloop.index }}"
              class="product-thumbnail {% if forloop.first %}active{% endif %}"
              onclick="document.getElementById('main-image').src='{{ image | img_url: '800x800' }}'; this.parentElement.querySelectorAll('.product-thumbnail').forEach(el => el.classList.remove('active')); this.classList.add('active');"
            >
          {% endfor %}
        </div>
        <img
          src="{{ product.featured_image | img_url: '800x800' }}"
          alt="{{ product.title | escape }} - Main Image"
          class="product-image-main"
          id="main-image"
        >
      </div>
    {% else %}
      <img src="{{ 'no-image.jpg' | asset_url }}" alt="No image available" class="product-image-main">
    {% endif %}
  </div>
  <div class="product-info">
    <h1>{{ product.title | escape }}</h1>
    <div class="product-price">
      <span class="price">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    {% if section.settings.show_availability %}
      <p class="product-availability">
        {% if product.available %}
          <i class="fas fa-check-circle"></i> In Stock
        {% else %}
          <i class="fas fa-times-circle"></i> Out of Stock
        {% endif %}
      </p>
    {% endif %}
    <p class="description">{{ product.description | strip_html | truncate: 200 }}</p>
    {% if section.settings.show_rating %}
      <div class="product-rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star-half-alt"></i>
        <span>4.5 (123 reviews)</span>
      </div>
    {% endif %}
    {% comment %} Buy Now button below description and rating {% endcomment %}
    {% form 'product', product, class: 'buy-now-form', aria-label: 'Buy now form' %}
      {% assign current_variant = product.selected_or_first_available_variant %}
      <input type="hidden" name="id" value="{{ current_variant.id }}">
      <input type="hidden" name="quantity" value="1">
      <input
        type="submit"
        name="checkout"
        value="{{ section.settings.buy_now_text | default: 'Buy Now' }}"
        class="buy-now"
      >
    {% endform %}
    {% if section.settings.show_trust_badges %}
      <div class="trust-badges">
        <div class="trust-badge-item"><i class="fas fa-shipping-fast"></i> Free Shipping</div>
        <div class="trust-badge-item"><i class="fas fa-lock"></i> Secure Checkout</div>
        <div class="trust-badge-item"><i class="fas fa-undo"></i> 30-Day Returns</div>
      </div>
    {% endif %}
  </div>
</div>

{% comment %} JavaScript for thumbnail interaction {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mainImage = document.getElementById('main-image');
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    thumbnails.forEach((thumb) => {
      thumb.addEventListener('click', function () {
        mainImage.src = this.src.replace('100x100', '800x800');
        thumbnails.forEach((t) => t.classList.remove('active'));
        this.classList.add('active');
      });
    });
  });
</script>

