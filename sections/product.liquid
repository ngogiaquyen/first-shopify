{% comment %} Pure CSS for modern, fitness-focused product page styling {% endcomment %}
<style>
  .product-section {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #1a202c;
  }
  .product-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .product-image-main {
    width: 100%;
    aspect-ratio: 1 / 1;
    object-fit: contain;
    border-radius: 0.5rem;
    background-color: #f7fafc;
    transition: transform 0.3s ease;
  }
  .product-image-main:hover {
    transform: scale(1.02);
  }
  .product-thumbnails {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .product-thumbnail {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 0.25rem;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }
  .product-thumbnail:hover,
  .product-thumbnail.active {
    border-color: #ef4444;
  }
  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .product-info h1 {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0;
  }
  .product-price {
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }
  .product-price .price {
    font-size: 1.5rem;
    font-weight: 600;
    color: #ef4444;
  }
  .product-price .compare-at-price {
    font-size: 1.25rem;
    color: #6b7280;
    text-decoration: line-through;
  }
  .product-availability {
    font-size: 0.875rem;
    color: #15803d;
  }
  .product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #d97706;
  }
  .product-rating i {
    font-size: 1rem;
  }
  .product-info p.description {
    font-size: 1rem;
    line-height: 1.6;
    color: #4a5568;
  }
  .product-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .variant-selector select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    background-color: #ffffff;
    color: #1a202c;
    transition: border-color 0.3s ease;
  }
  .variant-selector select:focus {
    border-color: #ef4444;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
    outline: none;
  }
  .quantity-selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .quantity-selector button {
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid #d1d5db;
    background-color: #f7fafc;
    color: #1a202c;
    font-size: 1rem;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    min-width: 44px;
    min-height: 44px;
  }
  .quantity-selector button:hover {
    background-color: #ef4444;
    color: #ffffff;
    transform: scale(1.05);
  }
  .quantity-selector input {
    width: 4rem;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    text-align: center;
    background-color: #ffffff;
    color: #1a202c;
  }
  .quantity-selector input:focus {
    border-color: #ef4444;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
    outline: none;
  }
  .product-form .add-to-cart {
    padding: 0.75rem;
    background-color: #ef4444;
    color: #ffffff;
    font-weight: 600;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    min-height: 44px;
    font-size: 0.875rem;
  }
  .product-form .add-to-cart:hover {
    background-color: #dc2626;
    transform: translateY(-2px);
  }
  .trust-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 0.875rem;
    color: #4a5568;
  }
  .trust-badges i {
    color: #ef4444;
    margin-right: 0.25rem;
  }
  .product-section a:focus, .product-section button:focus {
    outline: 2px solid #ef4444;
    outline-offset: 2px;
  }

  /* Tablet (768px - 1024px) */
  @media (max-width: 1024px) {
    .product-section {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .product-info h1 {
      font-size: 1.5rem;
    }
    .product-price .price {
      font-size: 1.25rem;
    }
    .product-price .compare-at-price {
      font-size: 1rem;
    }
    .product-image-main {
      max-height: 400px;
    }
    .product-thumbnails {
      justify-content: center;
    }
    .product-thumbnail {
      width: 60px;
      height: 60px;
    }
  }

  /* Mobile (below 768px) */
  @media (max-width: 768px) {
    .product-section {
      gap: 1rem;
    }
    .product-info h1 {
      font-size: 1.25rem;
    }
    .product-price .price {
      font-size: 1.125rem;
    }
    .product-price .compare-at-price {
      font-size: 0.875rem;
    }
    .product-info p.description {
      font-size: 0.875rem;
    }
    .product-image-main {
      max-height: 300px;
    }
    .product-thumbnails {
      gap: 0.25rem;
    }
    .product-thumbnail {
      width: 50px;
      height: 50px;
    }
    .quantity-selector input {
      width: 3rem;
    }
    .quantity-selector button {
      width: 2rem;
      height: 2rem;
      min-width: 36px;
      min-height: 36px;
    }
    .product-form .add-to-cart {
      font-size: 0.75rem;
    }
  }
</style>

{% comment %} Product HTML structure {% endcomment %}
<div class="product-section">
  <div class="product-images">
    {% if product.images.size > 0 %}
      <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title | escape }} - Main Image" class="product-image-main" id="main-image">
      <div class="product-thumbnails">
        {% for image in product.images %}
          <img src="{{ image | img_url: '100x100' }}" alt="{{ product.title | escape }} - Thumbnail {{ forloop.index }}" class="product-thumbnail {% if forloop.first %}active{% endif %}" onclick="document.getElementById('main-image').src='{{ image | img_url: '600x600' }}'; this.parentElement.querySelectorAll('.product-thumbnail').forEach(el => el.classList.remove('active')); this.classList.add('active');">
        {% endfor %}
      </div>
    {% else %}
      <img src="{{ 'no-image.jpg' | asset_url }}" alt="No image available" class="product-image-main">
    {% endif %}
  </div>

  <div class="product-info">
    <h1>{{ product.title | escape }}</h1>
    <div class="product-price">
      <span class="price">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    {% if section.settings.show_availability %}
      <p class="product-availability">
        {% if product.available %}
          <i class="fas fa-check-circle"></i> In Stock
        {% else %}
          <i class="fas fa-times-circle"></i> Out of Stock
        {% endif %}
      </p>
    {% endif %}
    {% if section.settings.show_rating %}
      <div class="product-rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star-half-alt"></i>
        <span>4.5 (123 reviews)</span>
      </div>
    {% endif %}
    <p class="description">{{ product.description | strip_html | truncate: 300 }}</p>
    {% if section.settings.show_trust_badges %}
      <div class="trust-badges">
        <span><i class="fas fa-shipping-fast"></i> Free Shipping</span>
        <span><i class="fas fa-lock"></i> Secure Checkout</span>
        <span><i class="fas fa-undo"></i> 30-Day Returns</span>
      </div>
    {% endif %}
  </div>

  <div class="product-form">
    {% form 'product', product, aria-label="Add to cart form" %}
      {% assign current_variant = product.selected_or_first_available_variant %}
      <div class="variant-selector">
        <select name="id" aria-label="Select product variant">
          {% for variant in product.variants %}
            <option
              value="{{ variant.id }}"
              {% if variant == current_variant %}
                selected="selected"
              {% endif %}
            >
              {{ variant.title }} - {{ variant.price | money }}
            </option>
          {% endfor %}
        </select>
      </div>
      <div class="quantity-selector">
        <button type="button" onclick="this.nextElementSibling.value = parseInt(this.nextElementSibling.value) - 1 || 1" aria-label="Decrease quantity">-</button>
        <input type="number" name="quantity" min="1" value="1" aria-label="Quantity">
        <button type="button" onclick="this.previousElementSibling.value = parseInt(this.previousElementSibling.value) + 1" aria-label="Increase quantity">+</button>
      </div>
      <input type="submit" value="{{ section.settings.add_to_cart_text | default: 'Add to cart' }}" class="add-to-cart">
      {{ form | payment_button }}
    {% endform %}
  </div>
</div>

{% comment %} JavaScript for thumbnail interaction {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mainImage = document.getElementById('main-image');
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', function() {
        mainImage.src = this.src.replace('100x100', '600x600');
        thumbnails.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
      });
    });
  });
</script>

{% schema %}
{
  "name": "Product",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_availability",
      "label": "Show availability status",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show product rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show trust badges",
      "default": true
    },
    {
      "type": "text",
      "id": "add_to_cart_text",
      "label": "Add to cart button text",
      "default": "Add to cart"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}