{% comment %} Defining schema for Shopify Theme Editor {% endcomment %}
{% schema %}
{
  "name": "Two Images",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    }
  ],
  "presets": [
    {
      "name": "Two Images",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% comment %} Styles for two images display {% endcomment %}
<style>
  .two-images-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    box-sizing: border-box;
  }
  .image-wrapper {
    flex: 1 1 calc(50% - 10px);
    min-width: 300px;
    position: relative;
    border-radius: 0px 250px 0px 0px;
  }
  .image-wrapper img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    border-radius: 8px;
  }
  .image-placeholder {
    width: 100%;
    height: 200px;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    color: #666;
    font-size: 1rem;
    text-align: center;
  }
  @media (max-width: 768px) {
    .image-wrapper {
      flex: 1 1 100%;
      min-width: 100%;
    }
  }
</style>

{% comment %} HTML structure for displaying two images {% endcomment %}
<div class="two-images-container" role="region" aria-label="Two images section">
  <div class="image-wrapper">
    {% if section.settings.image_1 %}
      <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Image 1" loading="lazy">
    {% else %}
      <div class="image-placeholder">No Image Selected for Image 1</div>
    {% endif %}
  </div>
  <div class="image-wrapper">
    {% if section.settings.image_2 %}
      <img src="{{ section.settings.image_2 | img_url: 'large' }}" alt="Image 2" loading="lazy">
    {% else %}
      <div class="image-placeholder">No Image Selected for Image 2</div>
    {% endif %}
  </div>
</div>