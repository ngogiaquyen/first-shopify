{% comment %}
  Phần Pilates Setup và Reformer
  Hiển thị hai thẻ với hình nền (hoặc màu nền dự phòng), hiệu ứng hình lục giác, và nút kêu gọi hành động.
{% endcomment %}

{% schema %}
{
  "name": "Phần Pilates",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_background_image",
      "label": "Hình nền thẻ bên trái"
    },
    {
      "type": "image_picker",
      "id": "right_background_image",
      "label": "Hình nền thẻ bên phải"
    }
  ],
  "presets": [
    {
      "name": "Phần Pilates",
      "category": "Tùy chỉnh"
    }
  ]
}
{% endschema %}

{{ 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' | stylesheet_tag }}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
    background-color: #fff;
    margin: 0;
  }

  .pilates-container {
    display: flex;
    flex-direction: column;
    max-width: 1280px;
    margin: 0 auto;
    padding: 24px;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .pilates-container {
      flex-direction: row;
    }
  }

  .card {
    position: relative;
    flex: 1;
    overflow: hidden;
    max-width: 600px;
    aspect-ratio: 4 / 5;
  }

  @media (min-width: 768px) {
    .card {
      max-width: none;
    }
  }

  .card--left {
    border-radius: 300px 0 0 0;
  }

  .card--right {
    border-radius: 0 0 300px 0;
  }

  .background-layer {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-color: #2f4f1f; /* Màu dự phòng cho thẻ trái */
  }

  .overlay-layer {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.9;
    background-color: #4a4a4a; /* Màu dự phòng cho lớp phủ trái */
  }

  .card--right .background-layer {
    background-color: #3a6a2a; /* Màu dự phòng cho thẻ phải */
  }

  .card--right .overlay-layer {
    background-color: #66bb6a; /* Màu dự phòng cho lớp phủ phải */
  }

  .clip-left-hex {
    clip-path: polygon(0% 0%, 70% 0%, 100% 25%, 100% 75%, 70% 100%, 0% 100%, 30% 75%, 30% 25%);
  }

  .clip-right-hex {
    clip-path: polygon(30% 0%, 100% 0%, 100% 100%, 30% 100%, 0% 75%, 0% 25%);
  }

  .content {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px;
    max-width: 320px;
    color: #fff;
    z-index: 10;
  }

  .content__label {
    text-transform: uppercase;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 8px;
  }

  .content__title {
    font-size: 36px;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .content__title--light {
    color: #e0f7ff;
  }

  .content__button {
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: #222;
    border-radius: 9999px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #fff;
    text-decoration: none;
    width: max-content;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .content__button:hover {
    background-color: #111;
  }

  .content__button-icon {
    background-color: #4caf50;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
  }
</style>

<main class="pilates-container">
  <!-- Thẻ bên trái -->
  <section class="card card--left">
    <div class="background-layer" style="{% if section.settings.left_background_image %}background-image: url({{ section.settings.left_background_image | asset_url }});{% endif %}"></div>
    <div class="overlay-layer clip-left-hex" style="{% if section.settings.left_background_image %}background-image: url({{ section.settings.left_background_image | asset_url }});{% endif %}"></div>
    <div class="content">
      <p class="content__label">DỊCH VỤ TƯ VẤN</p>
      <h2 class="content__title content__title--light">
        Setup Phòng<br>Tập Pilates
      </h2>
      <button class="content__button">
        ĐĂNG KÍ NGAY
        <span class="content__button-icon"><i class="fas fa-arrow-right"></i></span>
      </button>
    </div>
  </section>
  <!-- Thẻ bên phải -->
  <section class="card card--right">
    <div class="background-layer" style="{% if section.settings.right_background_image %}background-image: url({{ section.settings.right_background_image | asset_url }});{% endif %}"></div>
    <div class="overlay-layer clip-right-hex" style="{% if section.settings.right_background_image %}background-image: url({{ section.settings.right_background_image | asset_url }});{% endif %}"></div>
    <div class="content">
      <p class="content__label">GIAO HÀNG TOÀN QUỐC</p>
      <h2 class="content__title">
        Máy Tập Pilates<br>Reformer
      </h2>
      <button class="content__button">
        MUA NGAY
        <span class="content__button-icon"><i class="fas fa-arrow-right"></i></span>
      </button>
    </div>
  </section>
</main>