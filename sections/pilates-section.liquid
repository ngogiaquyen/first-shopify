{% comment %}
  Pilates Setup and Reformer Section
  This section displays two cards for Pilates setup consultation and Reformer machine purchase with background images.
{% endcomment %}

{% schema %}
{
  "name": "Pilates Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_background_image",
      "label": "Left Card Background Image"
    },
    {
      "type": "image_picker",
      "id": "right_background_image",
      "label": "Right Card Background Image"
    }
  ],
  "presets": [
    {
      "name": "Pilates Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Pilates Setup and Reformer</title>
  {{ 'https://cdn.tailwindcss.com' | script_tag }}
  {{ 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' | stylesheet_tag }}
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');
    body {
      font-family: 'Inter', sans-serif;
    }
    /* Hex clip path for left side */
    .clip-left-hex {
      clip-path: polygon(
        0% 0%,
        70% 0%,
        100% 25%,
        100% 75%,
        70% 100%,
        0% 100%,
        30% 75%,
        30% 25%
      );
    }
    /* Hex clip path for right side */
    .clip-right-hex {
      clip-path: polygon(
        30% 0%,
        100% 0%,
        100% 100%,
        30% 100%,
        0% 75%,
        0% 25%
      );
    }
    /* Hex shape for images */
    .clip-hex {
      clip-path: polygon(
        25% 0%,
        75% 0%,
        100% 50%,
        75% 100%,
        25% 100%,
        0% 50%
      );
    }
  </style>
</head>
<body class="bg-white">
  <main class="flex flex-col md:flex-row max-w-[1280px] mx-auto p-6 gap-6">
    <!-- Left card -->
    <section class="relative flex-1 rounded-[300px_0_0_0] overflow-hidden max-w-[600px] md:max-w-none" style="aspect-ratio: 4 / 5">
      <div class="absolute inset-0" style="background-image: url({{ section.settings.left_background_image | asset_url }}); background-size: cover; background-position: center;"></div>
      <div class="absolute inset-0" style="background-image: url({{ section.settings.left_background_image | asset_url }}); background-size: cover; background-position: center; opacity: 0.9; clip-path: polygon(0% 0%, 70% 0%, 100% 25%, 100% 75%, 70% 100%, 0% 100%, 30% 75%, 30% 25%);"></div>
      <!-- Text and button container -->
      <div class="absolute top-0 left-0 bottom-0 flex flex-col justify-center px-10 max-w-[320px] text-white z-10">
        <p class="uppercase font-semibold text-sm mb-2">DỊCH VỤ TƯ VẤN</p>
        <h2 class="text-4xl font-extrabold leading-tight mb-6 text-sky-100">
          Setup Phòng<br>Tập Pilates
        </h2>
        <button class="flex items-center gap-2 bg-[#222222] hover:bg-[#111111] rounded-full px-6 py-3 font-semibold text-xs uppercase tracking-widest w-max" type="button">
          ĐĂNG KÍ NGAY
          <span class="bg-[#4caf50] rounded-full w-6 h-6 flex items-center justify-center text-white text-sm">
            <i class="fas fa-arrow-right"></i>
          </span>
        </button>
      </div>
    </section>
    <!-- Right card -->
    <section class="relative flex-1 rounded-[0_0_300px_0] overflow-hidden max-w-[600px] md:max-w-none" style="aspect-ratio: 4 / 5">
      <div class="absolute inset-0" style="background-image: url({{ section.settings.right_background_image | asset_url }}); background-size: cover; background-position: center;"></div>
      <div class="absolute inset-0" style="background-image: url({{ section.settings.right_background_image | asset_url }}); background-size: cover; background-position: center; opacity: 0.9; clip-path: polygon(30% 0%, 100% 0%, 100% 100%, 30% 100%, 0% 75%, 0% 25%);"></div>
      <!-- Text and button container -->
      <div class="absolute top-0 left-0 bottom-0 flex flex-col justify-center px-10 max-w-[320px] text-white z-10">
        <p class="uppercase font-semibold text-sm mb-2">GIAO HÀNG TOÀN QUỐC</p>
        <h2 class="text-4xl font-extrabold leading-tight mb-6">
          Máy Tập Pilates<br>Reformer
        </h2>
        <button class="flex items-center gap-2 bg-[#222222] hover:bg-[#111111] rounded-full px-6 py-3 font-semibold text-xs uppercase tracking-widest w-max" type="button">
          MUA NGAY
          <span class="bg-[#4caf50] rounded-full w-6 h-6 flex items-center justify-center text-white text-sm">
            <i class="fas fa-arrow-right"></i>
          </span>
        </button>
      </div>
    </section>
  </main>
</body>
</html>