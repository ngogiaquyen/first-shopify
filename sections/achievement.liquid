{% comment %} CSS with smaller text, compact boxes, and highlight effect {% endcomment %}
<style>
    .stats-section {
        width: 100%;
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
        box-sizing: border-box;
        text-align: center;
        display: flex;
        flex-direction: column;
        opacity: 1;
    }

    .stats-title {
        margin-bottom: 15px;
        text-transform: uppercase;
        font-size: 2rem;
        font-weight: 600;
        line-height: 1.2em;
        color: #1A1A1A;
        font-family: 'Inter', sans-serif;
        background: linear-gradient(90deg, #2aab46, #1a73e8);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }

    .stats-section.active .stats-title {
        opacity: 1;
        transform: translateY(0);
    }

    .stats-line {
        height: 3px;
        background: linear-gradient(90deg, #2aab46, #1a73e8);
        width: 60%;
        margin: 0 auto 20px;
        opacity: 0;
        transform: scaleX(0);
        transform-origin: left;
        transition: opacity 0.8s ease-out 0.3s, transform 0.8s ease-out 0.3s;
    }

    .stats-section.active .stats-line {
        opacity: 1;
        transform: scaleX(1);
    }

    .stats-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
    }

    .stat-item {
        flex: 1 1 calc(25% - 15px);
        min-width: 160px;
        text-align: center;
        padding: 20px;
        background: linear-gradient(135deg, #ffffff, #f0f4f8);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
        opacity: 1;
        transform: translateY(0);
        transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    }

    .stat-item.highlight {
        background: linear-gradient(135deg, #e6f0fa, #d4e4f7);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        transform: scale(1.05);
        transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    }

    .stat-item:hover {
        background: linear-gradient(135deg, #e6f0fa, #d4e4f7);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        transform: scale(1.05);
        transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    }

    .stat-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 50%, rgba(42, 171, 70, 0.15), transparent 70%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .stat-item:hover::before,
    .stat-item.highlight::before {
        opacity: 1;
    }

    .stat-icon {
        font-size: 2.5rem;
        color: #2aab46;
        margin-bottom: 10px;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    .stat-item:hover .stat-icon,
    .stat-item.highlight .stat-icon {
        color: #1a73e8;
        transform: scale(1.1);
    }

    .stat-number {
        font-size: 1.8rem;
        font-weight: 700;
        color: #1A1A1A;
        margin: 8px 0;
        font-family: 'Inter', sans-serif;
    }

    .stat-description {
        font-size: 0.9rem;
        color: #555;
        line-height: 1.4;
        font-family: 'Inter', sans-serif;
    }

    @media (max-width: 992px) {
        .stats-title {
            font-size: 1.8rem;
        }
        .stats-line {
            width: 70%;
        }
        .stat-item {
            flex: 1 1 calc(50% - 15px);
            min-width: 140px;
            padding: 15px;
        }
        .stat-icon {
            font-size: 2.2rem;
        }
        .stat-number {
            font-size: 1.6rem;
        }
        .stat-description {
            font-size: 0.85rem;
        }
    }

    @media (max-width: 576px) {
        .stats-title {
            text-align: center;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        .stats-line {
            width: 80%;
            margin-bottom: 15px;
        }
        .stats-container {
            gap: 10px;
        }
        .stat-item {
            flex: 1 1 100%;
            padding: 12px;
        }
        .stat-icon {
            font-size: 2rem;
        }
        .stat-number {
            font-size: 1.4rem;
        }
        .stat-description {
            font-size: 0.8rem;
        }
    }
</style>

{% comment %} JavaScript for looping highlight effect on stat items {% endcomment %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const statsSection = document.querySelector('.stats-section');
        const statItems = document.querySelectorAll('.stat-item');
        let currentIndex = 0;

        // Activate section title and line immediately
        statsSection.classList.add('active');

        // Function to reset highlight on all stat items
        function resetHighlights() {
            statItems.forEach(item => {
                item.classList.remove('highlight');
            });
        }

        // Function to highlight the next stat item
        function highlightNextItem() {
            resetHighlights();
            statItems[currentIndex].classList.add('highlight');
            currentIndex = (currentIndex + 1) % statItems.length; // Loop back to 0
        }

        // Highlight the first item immediately
        highlightNextItem();

        // Set interval to switch highlight every 5 seconds
        setInterval(highlightNextItem, 5000);
    });
</script>

