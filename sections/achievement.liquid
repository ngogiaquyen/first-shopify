{% comment %} Styles for stats display with title, responsive design, and scroll animation {% endcomment %}
<style>
    .stats-section {
      width: 100%;
      max-width: 1200px;
      margin: 40px auto;
      padding: 20px;
      box-sizing: border-box;
      text-align: center;
      display: flex;
      flex-direction: column;
      opacity: 0;
      transition: opacity 0.5s ease-out;
    }

    .stats-section.visible {
      opacity: 1;
    }

    .stats-title {
      margin-bottom: 30px;
      text-transform: uppercase;
      font-size: 36px;
      font-weight: 500;
      line-height: 1.1em;
      color: #2B2B2B;
      margin-bottom: 12px;
      font-family: 'Poppins', sans-serif;
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.5s ease-out, transform 0.5s ease-out;
    }

    .stats-section.visible .stats-title {
      opacity: 1;
      transform: translateY(0);
    }

    .stats-line {
      height: 1px;
      background: #2B2B2B;
      width: 70%;
      margin-bottom: 25px;
      align-self: center;
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.5s ease-out 0.2s, transform 0.5s ease-out 0.2s;
    }

    .stats-section.visible .stats-line {
      opacity: 1;
      transform: translateY(0);
    }

    .stats-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .stat-item {
      flex: 1 1 calc(25% - 20px);
      min-width: 200px;
      text-align: center;
      padding: 20px;
      background-color: #f8f8f8;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.5s ease-out, transform 0.5s ease-out;
    }

    .stats-section.visible .stat-item:nth-child(1) {
      opacity: 1;
      transform: translateY(0);
      transition-delay: 0.3s;
    }

    .stats-section.visible .stat-item:nth-child(2) {
      opacity: 1;
      transform: translateY(0);
      transition-delay: 0.4s;
    }

    .stats-section.visible .stat-item:nth-child(3) {
      opacity: 1;
      transform: translateY(0);
      transition-delay: 0.5s;
    }

    .stats-section.visible .stat-item:nth-child(4) {
      opacity: 1;
      transform: translateY(0);
      transition-delay: 0.6s;
    }

    .stat-icon {
      font-size: 2.5rem;
      color: #2aab46;
      margin-bottom: 10px;
    }

    .stat-number {
      font-size: 2rem;
      font-weight: bold;
      color: #333;
      margin: 10px 0;
    }

    .stat-description {
      font-size: 1rem;
      color: #666;
      line-height: 1.4;
    }

    @media (max-width: 992px) {
      .stats-title {
        font-size: 2rem;
      }
      .stat-item {
        flex: 1 1 calc(50% - 20px);
        min-width: 150px;
        padding: 15px;
      }
      .stat-icon {
        font-size: 2rem;
      }
      .stat-number {
        font-size: 1.8rem;
      }
      .stat-description {
        font-size: 0.9rem;
      }
    }

    @media (max-width: 576px) {
      .stats-title {
        font-size: 1.5rem;
        margin-bottom: 20px;
      }
      .stats-container {
        gap: 15px;
      }
      .stat-item {
        flex: 1 1 100%;
        padding: 10px;
      }
      .stat-icon {
        font-size: 1.8rem;
      }
      .stat-number {
        font-size: 1.5rem;
      }
      .stat-description {
        font-size: 0.85rem;
      }
    }
</style>

{% comment %} JavaScript to handle scroll animation with Intersection Observer {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const statsSection = document.querySelector('.stats-section');
    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1
    });
    observer.observe(statsSection);
  });
</script>

