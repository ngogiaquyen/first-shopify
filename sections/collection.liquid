{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const filterButtons = document.querySelectorAll('.filter-button');
  const products = Array.from(document.querySelectorAll('.collection-product'));
  const paginationContainer = document.getElementById('pagination-container');
  const productsPerPage = 20;
  let currentFilter = 'all';
  let currentPage = 1;

  // Function to render pagination
  function renderPagination(filteredProducts, filterType, currentPage) {
    const totalPages = Math.ceil(filteredProducts.length / productsPerPage);
    let paginationHTML = '';

    if (totalPages > 1) {
      paginationHTML = `
        <nav class="pagination" role="navigation" aria-label="Pagination">
          <ul class="pagination__list">
            ${currentPage > 1 ? `
              <li class="pagination__item">
                <a href="#" class="pagination__link pagination__link--prev" data-page="${currentPage - 1}" aria-label="Previous page">
                  <span>←</span>
                </a>
              </li>
            ` : ''}
            ${Array.from({ length: totalPages }, (_, i) => i + 1).map(page => `
              <li class="pagination__item">
                ${page === currentPage ? `
                  <span class="pagination__link pagination__link--current" aria-current="page">${page}</span>
                ` : `
                  <a href="#" class="pagination__link" data-page="${page}" aria-label="Page ${page}">${page}</a>
                `}
              </li>
            `).join('')}
            ${currentPage < totalPages ? `
              <li class="pagination__item">
                <a href="#" class="pagination__link pagination__link--next" data-page="${currentPage + 1}" aria-label="Next page">
                  <span>→</span>
                </a>
              </li>
            ` : ''}
          </ul>
        </nav>
      `;
    }

    paginationContainer.innerHTML = paginationHTML;

    // Add event listeners for pagination links
    document.querySelectorAll('.pagination__link').forEach(link => {
      link.addEventListener('click', function(event) {
        event.preventDefault();
        currentPage = parseInt(this.getAttribute('data-page'));
        applyFilterAndPagination(filterType, currentPage);
      });
    });
  }

  // Function to apply filter and pagination
  function applyFilterAndPagination(filterType, page) {
    currentFilter = filterType;
    currentPage = page;

    // Filter products
    const filteredProducts = filterType === 'all'
      ? products
      : products.filter(product => product.getAttribute('data-product-type') === filterType);

    // Calculate pagination
    const startIndex = (page - 1) * productsPerPage;
    const endIndex = startIndex + productsPerPage;

    // Show/hide products
    products.forEach(product => {
      const productType = product.getAttribute('data-product-type');
      const isVisible = (filterType === 'all' || productType === filterType) &&
        products.indexOf(product) >= startIndex &&
        products.indexOf(product) < endIndex;
      product.classList.toggle('hidden', !isVisible);
    });

    // Render pagination
    renderPagination(filteredProducts, filterType, page);

    // Update URL without reloading
    const url = new URL(window.location);
    url.searchParams.set('type', filterType);
    url.searchParams.set('page', page);
    window.history.pushState({}, '', url);
  }

  // Initialize filter and pagination based on URL parameters
  const urlParams = new URLSearchParams(window.location.search);
  const initialFilter = urlParams.get('type') || 'all';
  const initialPage = parseInt(urlParams.get('page')) || 1;

  // Set active filter button
  filterButtons.forEach(button => {
    const filterType = button.getAttribute('data-filter');
    button.classList.toggle('active', filterType === initialFilter);
  });

  // Apply initial filter and pagination
  applyFilterAndPagination(initialFilter, initialPage);

  // Handle filter button clicks
  filterButtons.forEach(button => {
    button.addEventListener('click', function() {
      filterButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');
      const filterType = this.getAttribute('data-filter');
      applyFilterAndPagination(filterType, 1); // Reset to page 1 on filter change
    });
  });
});
{% endjavascript %}

