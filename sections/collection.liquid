{% comment %} JavaScript for scroll-based animation {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const containers = document.querySelectorAll('[class*="all-products-grid-container-"]');
    if (!containers.length) return;
    const observer = new IntersectionObserver((entries) => {
      let debounceTimeout;
      clearTimeout(debounceTimeout);
      debounceTimeout = setTimeout(() => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            entry.target.querySelectorAll('.product-card').forEach((card, index) => {
              card.classList.add('visible');
              card.style.transitionDelay = `${index * 0.1}s`;
            });
            observer.unobserve(entry.target);
          }
        });
      }, 100);
    }, { threshold: 0.1 });
    containers.forEach(container => observer.observe(container));
  });
</script>

{% comment %} All products grid HTML with pagination {% endcomment %}
<div class="all-products-grid-container-{{ section.id }}">
  {% if section.settings.grid_title != blank %}
    <h2 class="title"><a href="/collections/all">{{ section.settings.grid_title | escape }}</a></h2>
  {% endif %}
  <div class="product-grid">
    {% assign products_per_page = section.settings.products_per_page | default: 24 %}
    {% paginate collections.all.products by products_per_page %}
      {% assign has_products = false %}
      {% for product in collections.all.products %}
        {% if product.available %}
          {% assign has_products = true %}
          <div class="product-card">
            <a aria-label="{{ product.title | escape }}" href="{{ product.url }}">
              {% if product.compare_at_price > product.price %}
                <span class="sale-badge">Sale</span>
              {% endif %}
              <div class="product-image-container">
                {% if product.featured_image %}
                  <img class="product-image" src="{{ product.featured_image | img_url: '500x500', crop: 'center' }}" alt="{{ product.title | escape }}" loading="lazy">
                {% else %}
                  <img class="product-image" src="{{ 'no-image.jpg' | asset_url }}" alt="No image available" loading="lazy">
                {% endif %}
              </div>
              <div class="product-text">
                <p class="product-title">{{ product.title | default: 'Untitled Product' }}</p>
                <p class="product-prices">
                  {% if product.compare_at_price > product.price %}
                    <span class="price-original">{{ product.compare_at_price | money }}</span>
                    <span class="price-sale">{{ product.price | money }}</span>
                  {% else %}
                    <span class="price-sale">{{ product.price | money | default: 'N/A' }}</span>
                  {% endif %}
                </p>
              </div>
            </a>
            {% if product.variants.first %}
              <form action="/cart/add" method="post" class="buy-now-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <input type="hidden" name="quantity" value="1">
                <input type="hidden" name="return_to" value="/checkout">
                <button type="submit" class="buy-now" aria-label="Buy Now {{ product.title | escape }}" title="Add to Cart">
                  <i class="fas fa-cart-plus"></i>
                </button>
              </form>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
      {% unless has_products %}
        <p class="no-products">No products available in your store. Please add products to your Shopify store.</p>
      {% endunless %}
      {% if paginate.pages > 1 %}
        <div class="pagination">
          {% if paginate.previous.is_link %}
            <a href="{{ paginate.previous.url }}" aria-label="Previous page">Previous</a>
          {% endif %}
          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" aria-label="Page {{ part.title }}">{{ part.title }}</a>
            {% else %}
              <span class="current">{{ part.title }}</span>
            {% endif %}
          {% endfor %}
          {% if paginate.next.is_link %}
            <a href="{{ paginate.next.url }}" aria-label="Next page">Next</a>
          {% endif %}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
  {% comment %} Structured data for SEO {% endcomment %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "CollectionPage",
      "name": "{{ section.settings.grid_title | escape }}",
      "description": "All products available in the store",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for product in collections.all.products %}
            {% if product.available %}
              {
                "@type": "Product",
                "name": "{{ product.title | escape }}",
                "url": "{{ shop.url }}{{ product.url }}",
                "image": "{{ product.featured_image | img_url: '500x500', crop: 'center' }}",
                "offers": {
                  "@type": "Offer",
                  "priceCurrency": "{{ shop.currency }}",
                  "price": "{{ product.price | money_without_currency }}",
                  "availability": "http://schema.org/InStock"
                }
              }{% unless forloop.last %},{% endunless %}
            {% endif %}
          {% endfor %}
        ]
      }
    }
  </script>
</div>